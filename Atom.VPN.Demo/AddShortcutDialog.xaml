<Window x:Class="Atom.VPN.Demo.AddShortcutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add App Shortcut" 
        Width="400" 
        Height="300"
        WindowStartupLocation="CenterOwner"
        Background="#121212"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Border Background="#1E1E1E" 
            CornerRadius="15" 
            BorderBrush="#333333" 
            BorderThickness="1" 
            Margin="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Add New Shortcut" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="0,0,0,20"/>
            
            <!-- Form -->
            <StackPanel Grid.Row="1" Margin="0,10">
                <TextBlock Text="App Name" 
                           Foreground="#BBBBBB" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" 
                         Padding="10" 
                         Margin="0,0,0,15" 
                         Background="#222222" 
                         Foreground="White" 
                         BorderThickness="0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
                <TextBlock Text="Path or URL" 
                           Foreground="#BBBBBB" 
                           Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="PathTextBox" 
                             Grid.Column="0" 
                             Padding="10" 
                             Background="#222222" 
                             Foreground="White" 
                             BorderThickness="0">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    
                    <Button Grid.Column="1" 
                            Content="Browse" 
                            Margin="10,0,0,0" 
                            Padding="10,5" 
                            Click="BrowseButton_Click"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
                
                <TextBlock Text="Tip: For websites, use full URL (e.g., https://www.example.com)" 
                           Foreground="#777777" 
                           FontSize="11" 
                           TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1" 
                        Content="Cancel" 
                        Margin="0,0,10,0" 
                        Padding="15,8" 
                        Click="CancelButton_Click"
                        Background="#333333"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button Grid.Column="2" 
                        Content="Add" 
                        Padding="15,8" 
                        Click="AddButton_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window> 