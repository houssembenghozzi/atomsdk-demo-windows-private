<Page x:Class="Atom.VPN.Demo.MainVPNPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Atom.VPN.Demo"
      xmlns:shapes="clr-namespace:System.Windows.Shapes;assembly=PresentationFramework"
      mc:Ignorable="d"
      Title="VPN"
      d:DesignHeight="700" 
      d:DesignWidth="460"
      Background="White"
      TextOptions.TextFormattingMode="Display"
      UseLayoutRounding="True">

    <Page.Resources>
        <!-- Font families -->
        <FontFamily x:Key="WorkSansRegular">/Atom.VPN.Demo;component/Resources/font/WorkSans-Regular.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansBold">/Atom.VPN.Demo;component/Resources/font/WorkSans-Bold.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansMedium">/Atom.VPN.Demo;component/Resources/font/WorkSans-Medium.ttf#Work Sans</FontFamily>
        
        <!-- World Map Background -->
        <ImageBrush x:Key="WorldMapImage" ImageSource="/Resources/Images/world_map.png" Opacity="0.05" Stretch="UniformToFill" />
        
        <!-- Toggle button style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="BackgroundElement" 
                                    Background="#333333" 
                                    Width="40" 
                                    Height="20" 
                                    CornerRadius="10"/>
                            <Border x:Name="ThumbElement" 
                                    Background="White" 
                                    Width="16" 
                                    Height="16" 
                                    CornerRadius="8"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundElement" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="ThumbElement" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="ThumbElement" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Location button style -->
        <Style x:Key="LocationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#222222"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ContentPresenter Grid.Column="0" VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock x:Name="Title" 
                                               Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                               FontSize="12" 
                                               Foreground="#AAAAAA"
                                               FontFamily="{StaticResource WorkSansRegular}"/>
                                    <TextBlock x:Name="SubTitle" 
                                               Text="{TemplateBinding Content}" 
                                               FontSize="14" 
                                               Foreground="White" 
                                               FontWeight="SemiBold"
                                               FontFamily="{StaticResource WorkSansMedium}"/>
                                </StackPanel>
                                
                                <Path Grid.Column="2" 
                                      Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" 
                                      Fill="#AAAAAA" 
                                      Width="8" 
                                      Height="12" 
                                      Stretch="Uniform"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Background World Map -->
        <Rectangle Fill="{StaticResource WorldMapImage}" Grid.RowSpan="2" Margin="0"/>
        
        <!-- Main content -->
        <Grid Margin="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header bar -->
                <RowDefinition Height="*"/>    <!-- Main content -->
                <RowDefinition Height="Auto"/> <!-- Footer area -->
            </Grid.RowDefinitions>
            
            <!-- Header with logo and menu -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Image Grid.Column="0" 
                       Source="/Resources/Images/fortis_icon.png" 
                       Width="40" 
                       Height="40" 
                       HorizontalAlignment="Left"/>
                
                <Button Grid.Column="2" 
                        x:Name="MenuButton"
                        Content="â‰¡" 
                        FontSize="24" 
                        Foreground="#0C0C0C" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Padding="10"
                        Click="MenuButton_Click"
                        VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Main VPN Control Area -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,-20,0,0">
                <!-- Power button - Now first, before status text -->
                <Button x:Name="PowerButton" 
                        Width="120" 
                        Height="120" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"
                        Click="PowerButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid x:Name="PowerButtonGrid">
                                <Grid.Resources>
                                    <Storyboard x:Key="WaveAnimation" RepeatBehavior="Forever" AutoReverse="False">
                                        <!-- Animation for circle 1 -->
                                        <DoubleAnimation Storyboard.TargetName="AnimationCircle1" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0.8" To="0" Duration="0:0:2" 
                                                         BeginTime="0:0:0" />
                                        <DoubleAnimation Storyboard.TargetName="AnimationCircle1" 
                                                    Storyboard.TargetProperty="Width"
                                                         From="85" To="100" Duration="0:0:2" 
                                                         BeginTime="0:0:0" />
                                        <DoubleAnimation Storyboard.TargetName="AnimationCircle1" 
                                                    Storyboard.TargetProperty="Height"
                                                         From="85" To="100" Duration="0:0:2" 
                                                         BeginTime="0:0:0" />
                                        
                                        <!-- Animation for circle 2 -->
                                        <DoubleAnimation Storyboard.TargetName="AnimationCircle2" 
                                                    Storyboard.TargetProperty="Opacity"
                                                    From="0.6" To="0" Duration="0:0:2" 
                                                         BeginTime="0:0:0.65" />
                                        <DoubleAnimation Storyboard.TargetName="AnimationCircle2" 
                                                    Storyboard.TargetProperty="Width"
                                                         From="90" To="110" Duration="0:0:2" 
                                                         BeginTime="0:0:0.65" />
                                        <DoubleAnimation Storyboard.TargetName="AnimationCircle2" 
                                                    Storyboard.TargetProperty="Height"
                                                         From="90" To="110" Duration="0:0:2" 
                                                         BeginTime="0:0:0.65" />
                                        
                                        <!-- Animation for circle 3 -->
                                        <DoubleAnimation Storyboard.TargetName="AnimationCircle3" 
                                                    Storyboard.TargetProperty="Opacity"
                                                    From="0.4" To="0" Duration="0:0:2"
                                                         BeginTime="0:0:1.3" />
                                        <DoubleAnimation Storyboard.TargetName="AnimationCircle3" 
                                                    Storyboard.TargetProperty="Width"
                                                         From="95" To="120" Duration="0:0:2" 
                                                         BeginTime="0:0:1.3" />
                                        <DoubleAnimation Storyboard.TargetName="AnimationCircle3" 
                                                    Storyboard.TargetProperty="Height"
                                                         From="95" To="120" Duration="0:0:2" 
                                                         BeginTime="0:0:1.3" />
                                            </Storyboard>
                                </Grid.Resources>
                                
                                <!-- Animation circles - updated to gray color when not connected -->
                                <Ellipse x:Name="AnimationCircle3" 
                                         Width="95" 
                                         Height="95"
                                         Stroke="#868B96"
                                         StrokeThickness="1.5"
                                         Fill="Transparent"
                                         Opacity="0"/>
                                
                                <Ellipse x:Name="AnimationCircle2" 
                                         Width="90" 
                                         Height="90"
                                         Stroke="#868B96"
                                         StrokeThickness="1.5"
                                         Fill="Transparent"
                                         Opacity="0"/>
                                
                                <Ellipse x:Name="AnimationCircle1" 
                                         Width="85" 
                                         Height="85"
                                         Stroke="#868B96"
                                         StrokeThickness="1.5"
                                         Fill="Transparent"
                                         Opacity="0"/>
                                
                                <!-- Outer circle -->
                                <Ellipse x:Name="OuterCircle" 
                                         Width="90" 
                                         Height="90" 
                                         Fill="#E9E9E9"/>
                                
                                <!-- Button background - uses #868B96 as in the reference image -->
                                <Ellipse x:Name="ButtonBackground" 
                                         Width="80" 
                                         Height="80" 
                                         Fill="#868B96"/>
                                
                                <!-- Power icon -->
                                <Path x:Name="PowerIcon"
                                      Data="M50.1054 35.1611V50.2134M59.6786 42.1454C61.5728 44.0402 62.8626 46.454 63.3849 49.0818C63.9073 51.7095 63.6388 54.4332 62.6133 56.9083C61.5878 59.3835 59.8515 61.499 57.6237 62.9873C55.396 64.4757 52.777 65.2701 50.0979 65.2701C47.4187 65.2701 44.7997 64.4757 42.572 62.9873C40.3443 61.499 38.6079 59.3835 37.5824 56.9083C36.5569 54.4332 36.2884 51.7095 36.8108 49.0818C37.3331 46.454 38.6229 44.0402 40.5171 42.1454" 
                                      Stroke="White" 
                                      StrokeThickness="3" 
                                      StrokeLineJoin="Round" 
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Width="35"
                                      Height="35"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBackground" Property="Fill" Value="#767A85"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBackground" Property="Fill" Value="#656A75"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Status text - Now under power button -->
                <TextBlock x:Name="StatusText" 
                           Text="Not Connected" 
                           FontFamily="{StaticResource WorkSansBold}" 
                           FontSize="22" 
                           Foreground="Black" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"
                           Height="30"/>
                
                <TextBlock x:Name="DescriptionText" 
                           Text="Press on button to connect" 
                           FontFamily="{StaticResource WorkSansRegular}" 
                           FontSize="14" 
                           Foreground="#AAAAAA" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           Height="20"/>
                
                <!-- Cards container -->
                <StackPanel Width="325" HorizontalAlignment="Center">
                    <!-- Country selection -->
                        <Button Style="{StaticResource LocationButtonStyle}"
                                Tag="Current Location"
                                Content="United States - Washington DC"
                                Width="323"
                                Height="62"
                                Margin="0,0,0,15">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#FFFFFF" 
                                        CornerRadius="30"
                                            BorderThickness="1"
                                            BorderBrush="#F0F1F3"
                                        Padding="15,12,15,12">
                                        <Grid VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                        <Grid Width="30" Height="30" Grid.Column="0" Margin="0,0,0,0">
                                            <Ellipse Fill="#E9E9E9" Width="30" Height="30"/>
                                            <TextBlock Text="ðŸ‡ºðŸ‡¸" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                            
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                                <TextBlock x:Name="Title" 
                                                           Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                                           FontSize="14" 
                                                           Foreground="#AAAAAA"
                                                           FontFamily="{StaticResource WorkSansMedium}"
                                                           FontWeight="500"
                                                           LineHeight="14"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock x:Name="SubTitle" 
                                                           Text="{TemplateBinding Content}" 
                                                           FontSize="14" 
                                                           Foreground="#323438" 
                                                           FontWeight="600"
                                                           FontFamily="{StaticResource WorkSansMedium}"
                                                           LineHeight="14"
                                                           VerticalAlignment="Center"
                                                           Margin="0,6,0,0"/>
                                            </StackPanel>
                                            
                                            <Path Grid.Column="2" 
                                                  Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" 
                                                  Fill="#AAAAAA" 
                                              Width="6" 
                                              Height="10" 
                                                  Stretch="Uniform"
                                                  Margin="0,0,5,0"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                    <!-- Connection Info Panel -->
                        <Grid x:Name="ConnectionInfoPanel" Margin="0,0,0,0" Visibility="Collapsed">
                        <!-- Connection info content -->
                        </Grid>
                        
                    <!-- Quick location options -->
                    <Grid x:Name="QuickLocationPanel" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                        <!-- Smart Location button content -->
                            <Button Grid.Column="0" 
                                Margin="0,0,5,0"
                                Height="60"
                                Background="#FFFFFF"
                                BorderThickness="1"
                                BorderBrush="#F0F1F3"
                                Padding="10">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="#FFFFFF" 
                                            CornerRadius="10"
                                                BorderThickness="1"
                                                BorderBrush="#F0F1F3"
                                            Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                            <Grid Width="24" Height="24" Grid.Column="0" VerticalAlignment="Center">
                                                <Path Data="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" 
                                                  Fill="#FFA251" 
                                                  Width="18" 
                                                          Height="18" 
                                                          Stretch="Uniform"
                                                  HorizontalAlignment="Center"/>
                                                </Grid>
                                                
                                            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="Smart Location" 
                                                      FontFamily="{StaticResource WorkSansMedium}" 
                                                               FontSize="12" 
                                                               Foreground="#323438" 
                                                      HorizontalAlignment="Left"/>
                                                <TextBlock Text="Singapore - Jurong" 
                                                      FontFamily="{StaticResource WorkSansRegular}" 
                                                      FontSize="11" 
                                                      Foreground="#666666" 
                                                      HorizontalAlignment="Left"
                                                      Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                        <!-- Recent Location button content -->
                            <Button Grid.Column="1" 
                                Margin="5,0,0,0"
                                Height="60"
                                Background="#FFFFFF"
                                BorderThickness="1"
                                BorderBrush="#F0F1F3"
                                Padding="10">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="#FFFFFF" 
                                            CornerRadius="10"
                                                BorderThickness="1"
                                                BorderBrush="#F0F1F3"
                                            Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                            <Grid Width="24" Height="24" Grid.Column="0" VerticalAlignment="Center">
                                                <Path Data="M12 6V12L16 14M12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2Z" 
                                                  Stroke="#666666" 
                                                  StrokeThickness="1.5"
                                                  Fill="Transparent"
                                                  Width="18" 
                                                  Height="18" 
                                                          Stretch="Uniform"
                                                  HorizontalAlignment="Center"/>
                                                </Grid>
                                                
                                            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="Recent Location" 
                                                      FontFamily="{StaticResource WorkSansMedium}" 
                                                               FontSize="12" 
                                                               Foreground="#323438" 
                                                      HorizontalAlignment="Left"/>
                                                <TextBlock Text="Japan - Tokyo" 
                                                      FontFamily="{StaticResource WorkSansRegular}" 
                                                      FontSize="11" 
                                                      Foreground="#666666" 
                                                      HorizontalAlignment="Left"
                                                      Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                </Grid>
                
                    <!-- App Shortcuts Panel -->
                    <Grid x:Name="AppShortcutsPanel" Margin="0,3,0,3" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        </Grid>
                        
                    <!-- Ad Blocker section -->
                    <Border Background="#FFFFFF" 
                           CornerRadius="30" 
                           BorderThickness="1"
                           BorderBrush="#F0F1F3"
                           Padding="15"
                           Width="325"
                           Height="54"
                           Margin="0,0,0,0">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Ad Blocker" 
                                        FontFamily="{StaticResource WorkSansMedium}" 
                                        FontSize="13" 
                                           Foreground="#323438" 
                                        FontWeight="SemiBold"/>
                                <TextBlock Text="Block ads and trackers while browsing" 
                                        FontFamily="{StaticResource WorkSansRegular}" 
                                        FontSize="11" 
                                        Foreground="#AAAAAA"/>
                        </StackPanel>
                        
                            <ToggleButton Grid.Column="1" 
                                      x:Name="AdBlockerToggle" 
                                          Style="{StaticResource ToggleSwitchStyle}" 
                                      IsChecked="True" 
                                          VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                    
                </StackPanel>
            </StackPanel>
            
            <!-- Premium feature banner -->
            <Border Grid.Row="2" 
                    Background="#13592614" 
                    CornerRadius="20" 
                    Padding="20" 
                    Margin="0,0,0,10"
                    MouseDown="DedicatedIpCard_MouseDown"
                    Cursor="Hand"
                    Width="323"
                    Height="106"
                    HorizontalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Crown icon in white circle -->
                    <Border Grid.Column="0" 
                            Width="48" 
                            Height="48" 
                            Background="White" 
                            CornerRadius="24"
                            VerticalAlignment="Center">
                        <Path Data="M12 1L15.5 7L22 8L17 13L18.5 19.5L12 16.5L5.5 19.5L7 13L2 8L8.5 7L12 1Z" 
                              Fill="#FFA251" 
                              Width="24" 
                              Height="24" 
                              Stretch="Uniform"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Dedicated IP" 
                                   FontFamily="{StaticResource WorkSansBold}" 
                                   FontSize="16" 
                                   Foreground="#323438" 
                                   FontWeight="Bold"
                                   LineHeight="18"/>
                        <TextBlock Text="Get 50% off and access free dedicated IP" 
                                   FontFamily="{StaticResource WorkSansRegular}" 
                                   FontSize="14" 
                                   Foreground="#666666" 
                                   TextWrapping="Wrap"
                                   Margin="0,4,0,0"
                                   LineHeight="16"/>
                    </StackPanel>
                    
                    <!-- Right arrow -->
                    <Path Grid.Column="2" 
                          Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" 
                          Fill="#323438" 
                          Width="24" 
                          Height="24" 
                          Stretch="Uniform"
                          VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page> 