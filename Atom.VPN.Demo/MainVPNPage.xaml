<Page x:Class="Atom.VPN.Demo.MainVPNPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Atom.VPN.Demo"
      xmlns:shapes="clr-namespace:System.Windows.Shapes;assembly=PresentationFramework"
      mc:Ignorable="d"
      Title="VPN"
      d:DesignHeight="700" 
      d:DesignWidth="460"
      Background="#121212"
      TextOptions.TextFormattingMode="Display"
      UseLayoutRounding="True">

    <Page.Resources>
        <!-- Font families -->
        <FontFamily x:Key="GTWalsheimPro">/Atom.VPN.Demo;component/Resources/font/GT-Walsheim-Regular-Trial-BF651b7fc71a47d.otf#GT Walsheim Pro</FontFamily>
        <FontFamily x:Key="GTWalsheimProBold">/Atom.VPN.Demo;component/Resources/font/GT-Walsheim-Bold-Trial-BF651b7fc737c57.otf#GT Walsheim Pro</FontFamily>
        <FontFamily x:Key="GTWalsheimProMedium">/Atom.VPN.Demo;component/Resources/font/GT-Walsheim-Medium-Trial-BF651b7fc728fb3.otf#GT Walsheim Pro</FontFamily>
        
        <!-- Toggle button style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="BackgroundElement" 
                                    Background="#333333" 
                                    Width="40" 
                                    Height="20" 
                                    CornerRadius="10"/>
                            <Border x:Name="ThumbElement" 
                                    Background="White" 
                                    Width="16" 
                                    Height="16" 
                                    CornerRadius="8"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundElement" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="ThumbElement" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="ThumbElement" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Location button style -->
        <Style x:Key="LocationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#222222"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ContentPresenter Grid.Column="0" VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock x:Name="Title" 
                                               Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                               FontSize="12" 
                                               Foreground="#AAAAAA"
                                               FontFamily="{StaticResource GTWalsheimPro}"/>
                                    <TextBlock x:Name="SubTitle" 
                                               Text="{TemplateBinding Content}" 
                                               FontSize="14" 
                                               Foreground="White" 
                                               FontWeight="SemiBold"
                                               FontFamily="{StaticResource GTWalsheimProMedium}"/>
                                </StackPanel>
                                
                                <Path Grid.Column="2" 
                                      Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" 
                                      Fill="#AAAAAA" 
                                      Width="8" 
                                      Height="12" 
                                      Stretch="Uniform"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Background world map image -->
        <Image Source="{StaticResource WorldMapImage}" 
               Opacity="0.2" 
               Stretch="UniformToFill"/>
        
        <!-- Main content -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header with logo and menu -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Image Grid.Column="0" 
                       Source="/Resources/Images/fortis_icon.png" 
                       Width="40" 
                       Height="40" 
                       HorizontalAlignment="Left"/>
                
                <Button Grid.Column="2" 
                        Content="â‰¡" 
                        FontSize="24" 
                        Foreground="White" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Padding="10"
                        VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Main VPN Control Area -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,-50,0,0">
                <!-- Status text -->
                <TextBlock x:Name="StatusText" 
                           Text="Not Connected" 
                           FontFamily="{StaticResource GTWalsheimProBold}" 
                           FontSize="24" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           Height="30"/>
                
                <TextBlock x:Name="DescriptionText" 
                           Text="Press on button to connect" 
                           FontFamily="{StaticResource GTWalsheimPro}" 
                           FontSize="16" 
                           Foreground="#BBBBBB" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Height="25"/>
                
                <!-- Power button -->
                <Button x:Name="PowerButton" 
                        Width="120" 
                        Height="120" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,40"
                        Click="PowerButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Outer glow effect using multiple circles -->
                                <Ellipse x:Name="OuterCircle4" 
                                         Width="170" 
                                         Height="170" 
                                         Fill="#20FF1A1A" 
                                         Opacity="0.2"/>
                                <Ellipse x:Name="OuterCircle3" 
                                         Width="150" 
                                         Height="150" 
                                         Fill="#30FF1A1A" 
                                         Opacity="0.3"/>
                                <Ellipse x:Name="OuterCircle2" 
                                         Width="140" 
                                         Height="140" 
                                         Fill="#40FF1A1A" 
                                         Opacity="0.4"/>
                                <Ellipse x:Name="OuterCircle1" 
                                         Width="130" 
                                         Height="130" 
                                         Fill="#50FF1A1A" 
                                         Opacity="0.5"/>
                                
                                <!-- Button background -->
                                <Ellipse x:Name="ButtonBackground" 
                                         Width="120" 
                                         Height="120" 
                                         Fill="#222222"/>
                                
                                <!-- Power icon -->
                                <Path x:Name="PowerIcon" 
                                      Data="M15,4V8H17V4H15M17,10H15V16H17V10M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6" 
                                      Fill="White" 
                                      Width="40" 
                                      Height="40" 
                                      Stretch="Uniform"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBackground" Property="Fill" Value="#333333"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBackground" Property="Fill" Value="#444444"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Current Location and Connection Info section - Fixed Height Container -->
                <Grid MinHeight="170">
                    <StackPanel>
                        <!-- Current Location section -->
                        <Button Style="{StaticResource LocationButtonStyle}"
                                Tag="Current Location"
                                Content="United States - Washington DC"
                                Margin="0,0,0,10">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <Grid Width="30" Height="30">
                                        <Ellipse Fill="#0052D4" Width="30" Height="30"/>
                                        <TextBlock Text="ðŸ‡ºðŸ‡¸" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        
                        <!-- Connection Info - Only visible when connected -->
                        <Grid x:Name="ConnectionInfoPanel" Margin="0,0,0,0" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- App shortcuts -->
                            <Border Grid.Column="0" 
                                    Margin="0,0,5,0"
                                    Background="White" 
                                    CornerRadius="15" 
                                    Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Plus icon -->
                                    <Border Grid.Column="0" 
                                            Width="30" 
                                            Height="30" 
                                            Background="#FFF8E0" 
                                            CornerRadius="15"
                                            VerticalAlignment="Center"
                                            Cursor="Hand"
                                            MouseDown="AddShortcut_Click">
                                        <TextBlock Text="+" 
                                                   FontSize="20" 
                                                   Foreground="#FFBB00" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Separator -->
                                    <Rectangle Grid.Column="1" 
                                               Width="1" 
                                               Height="40" 
                                               Fill="#EEEEEE" 
                                               Margin="10,0"/>
                                    
                                    <!-- App icons -->
                                    <StackPanel Grid.Column="2" 
                                                Orientation="Vertical" 
                                                Margin="0,0,0,0">
                                        <TextBlock Text="App shortcuts" 
                                                   FontSize="14" 
                                                   Foreground="#333333" 
                                                   FontFamily="{StaticResource GTWalsheimProMedium}" 
                                                   Margin="0,0,0,8"/>
                                        
                                        <Grid x:Name="AppShortcutsPanel" Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Connected IP -->
                            <Border Grid.Column="1" 
                                    Margin="5,0,0,0"
                                    Background="White" 
                                    CornerRadius="15" 
                                    Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Lightning icon -->
                                    <Border Grid.Column="0" 
                                            Width="30" 
                                            Height="30" 
                                            Background="#F2F8F1" 
                                            CornerRadius="15"
                                            VerticalAlignment="Center">
                                        <Path Data="M13,3H11V13H13V3M13,17H11V21H13V17Z" 
                                              Fill="#4CAF50" 
                                              Width="12" 
                                              Height="12" 
                                              Stretch="Uniform"/>
                                    </Border>
                                    
                                    <!-- Separator -->
                                    <Rectangle Grid.Column="1" 
                                               Width="1" 
                                               Height="40" 
                                               Fill="#EEEEEE" 
                                               Margin="10,0"/>
                                    
                                    <!-- IP address -->
                                    <StackPanel Grid.Column="2" 
                                                Orientation="Vertical">
                                        <TextBlock Text="Connected IP" 
                                                   FontSize="14" 
                                                   Foreground="#333333" 
                                                   FontFamily="{StaticResource GTWalsheimProMedium}" 
                                                   Margin="0,0,0,8"/>
                                        
                                        <TextBlock x:Name="ConnectedIpText"
                                                   Text="198.25.255.36" 
                                                   FontSize="14" 
                                                   Foreground="#4CAF50" 
                                                   FontFamily="{StaticResource GTWalsheimProMedium}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                        
                        <!-- Quick location options - Only visible when not connected -->
                        <Grid x:Name="QuickLocationPanel" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Smart Location -->
                            <Button Grid.Column="0" 
                                    Margin="0,0,5,0"
                                    Style="{StaticResource LocationButtonStyle}"
                                    Tag="Smart Location"
                                    Content="Singapore- Juron">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <Grid Width="30" Height="30">
                                            <Ellipse Fill="#222222" Width="30" Height="30"/>
                                            <Path Data="M12,3L1,9L12,15L21,10.09V17H23V9M5,13.18V17.18L12,21L19,17.18V13.18L12,17L5,13.18Z" 
                                                  Fill="#FF9500" 
                                                  Width="18" 
                                                  Height="18" 
                                                  Stretch="Uniform"/>
                                        </Grid>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            
                            <!-- Recent Location -->
                            <Button Grid.Column="1" 
                                    Margin="5,0,0,0"
                                    Style="{StaticResource LocationButtonStyle}"
                                    Tag="Recent Location"
                                    Content="Japan- Tokyo">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <Grid Width="30" Height="30">
                                            <Ellipse Fill="#222222" Width="30" Height="30"/>
                                            <Path Data="M13,3A9,9 0 0,0 4,12H1L4.89,15.89L4.96,16.03L9,12H6A7,7 0 0,1 13,5A7,7 0 0,1 20,12A7,7 0 0,1 13,19C11.07,19 9.32,18.21 8.06,16.94L6.64,18.36C8.27,20 10.5,21 13,21A9,9 0 0,0 22,12A9,9 0 0,0 13,3Z" 
                                                  Fill="#FFBB00" 
                                                  Width="18" 
                                                  Height="18" 
                                                  Stretch="Uniform"/>
                                        </Grid>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>
                
                <!-- Ad Blocker section -->
                <Border Margin="0,10,0,0" 
                       Background="#222222" 
                       CornerRadius="15" 
                       Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    
                        <Border Grid.Column="0" 
                                Width="36" 
                                Height="36" 
                                Background="#333333" 
                                CornerRadius="18">
                            <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12C4,13.85 4.63,15.55 5.68,16.91L16.91,5.68C15.55,4.63 13.85,4 12,4M12,20A8,8 0 0,0 20,12C20,10.15 19.37,8.45 18.32,7.09L7.09,18.32C8.45,19.37 10.15,20 12,20Z" 
                                  Fill="#FF4444" 
                                  Width="20" 
                                  Height="20" 
                                  Stretch="Uniform"/>
                        </Border>
                    
                        <TextBlock Grid.Column="1" 
                                   Text="Ad Blocker" 
                                   FontFamily="{StaticResource GTWalsheimProMedium}" 
                                   FontSize="16" 
                                   Foreground="White" 
                                   VerticalAlignment="Center" 
                                   Margin="15,0,0,0"/>
                    
                        <Button Grid.Column="2" 
                                Content="â“˜" 
                                Foreground="#AAAAAA" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                FontSize="18" 
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"/>
                    
                        <ToggleButton Grid.Column="3" 
                                      Style="{StaticResource ToggleSwitchStyle}" 
                                      VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Premium feature banner -->
            <Border Grid.Row="2" 
                    Background="#F0F8EB" 
                    CornerRadius="15" 
                    Padding="15" 
                    Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" 
                            Width="40" 
                            Height="40" 
                            Background="#F9E7CB" 
                            CornerRadius="20">
                        <Path Data="M12,1L21,5V11C21,16.55 17.16,21.74 12,23C6.84,21.74 3,16.55 3,11V5L12,1M12,3.18L5,6.3V11.22C5,15.54 8.25,19.82 12,20.82C15.75,19.82 19,15.54 19,11.22V6.3L12,3.18Z" 
                              Fill="#FFB74D" 
                              Width="24" 
                              Height="24" 
                              Stretch="Uniform"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock Text="Dedicated IP" 
                                   FontFamily="{StaticResource GTWalsheimProBold}" 
                                   FontSize="16" 
                                   Foreground="#323438" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="Get 50% off and access free dedicated IP" 
                                   FontFamily="{StaticResource GTWalsheimPro}" 
                                   FontSize="12" 
                                   Foreground="#666666" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <Path Grid.Column="2" 
                          Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" 
                          Fill="#323438" 
                          Width="12" 
                          Height="15" 
                          Stretch="Uniform"
                          VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page> 