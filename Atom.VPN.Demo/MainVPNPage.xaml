                                                           FontFamily="{StaticResource WorkSansMedium}"
                                                           FontWeight="400"
                                                           Height="14"
                                                           LineHeight="14"/>
                                                <TextBlock Text="{TemplateBinding Content}" 
                                                           FontSize="14" 
                                                           Foreground="#323438" 
                                                           FontFamily="{StaticResource WorkSansMedium}"
                                                           FontWeight="500"
                                                           Height="14"
                                                           LineHeight="14"
                                                           TextWrapping="NoWrap"
                                                           Margin="0,6,0,0"/>
                                            </StackPanel>
                                            
