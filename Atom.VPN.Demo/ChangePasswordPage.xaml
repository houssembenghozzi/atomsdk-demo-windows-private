<Page x:Class="Atom.VPN.Demo.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FAFAFA">
    <Grid>
        <Image Source="/Resources/icon/bg-light.svg"
               Stretch="UniformToFill"
               Opacity="0.07"
               Panel.ZIndex="0"/>
        <StackPanel Margin="24,40,24,24" VerticalAlignment="Top" Panel.ZIndex="1">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,32">
                <Button Width="32" Height="32" Background="Transparent" BorderThickness="0" Click="BackButton_Click">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="#323438" Width="24" Height="24"/>
                </Button>
                <TextBlock Text="Change Password" FontWeight="Bold" FontSize="20" Foreground="#323438" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <!-- Old Password -->
            <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                        <Canvas Width="20" Height="20">
                            <!-- Lock icon -->
                            <Rectangle Width="16" Height="10" Canvas.Left="2" Canvas.Top="8" Stroke="#212121" StrokeThickness="1.5"/>
                            <Ellipse Width="8" Height="8" Canvas.Left="6" Canvas.Top="2" Stroke="#212121" StrokeThickness="1.5"/>
                        </Canvas>
                    </Viewbox>
                    <PasswordBox Grid.Column="1" x:Name="OldPasswordBox" FontSize="16" Foreground="#212121" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"  PasswordChar="●"/>
                    <Button Grid.Column="2" Width="32" Height="32" Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                        <!-- Eye icon -->
                        <Path Data="M1,12C1,12 5,4 12,4C19,4 23,12 23,12C23,12 19,20 12,20C5,20 1,12 1,12Z M12,16C14.2091,16 16,14.2091 16,12C16,9.79086 14.2091,8 12,8C9.79086,8 8,9.79086 8,12C8,14.2091 9.79086,16 12,16Z" Stroke="#212121" StrokeThickness="1.5" Fill="Transparent"/>
                    </Button>
                </Grid>
            </Border>
            <!-- New Password -->
            <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                        <Canvas Width="20" Height="20">
                            <!-- Lock icon -->
                            <Rectangle Width="16" Height="10" Canvas.Left="2" Canvas.Top="8" Stroke="#212121" StrokeThickness="1.5"/>
                            <Ellipse Width="8" Height="8" Canvas.Left="6" Canvas.Top="2" Stroke="#212121" StrokeThickness="1.5"/>
                        </Canvas>
                    </Viewbox>
                    <PasswordBox Grid.Column="1" x:Name="NewPasswordBox" FontSize="16" Foreground="#212121" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"  PasswordChar="●"/>
                    <Button Grid.Column="2" Width="32" Height="32" Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                        <!-- Eye-off icon -->
                        <Path Data="M2,12C2,12 6,4 12,4C18,4 22,12 22,12C22,12 18,20 12,20C6,20 2,12 2,12Z M12,16C14.2091,16 16,14.2091 16,12C16,9.79086 14.2091,8 12,8C9.79086,8 8,9.79086 8,12C8,14.2091 9.79086,16 12,16Z M4,4L20,20" Stroke="#212121" StrokeThickness="1.5" Fill="Transparent"/>
                    </Button>
                </Grid>
            </Border>
            <!-- Confirm Password -->
            <Border Background="White" CornerRadius="12" Margin="0,0,0,24">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                        <Canvas Width="20" Height="20">
                            <!-- Lock icon -->
                            <Rectangle Width="16" Height="10" Canvas.Left="2" Canvas.Top="8" Stroke="#212121" StrokeThickness="1.5"/>
                            <Ellipse Width="8" Height="8" Canvas.Left="6" Canvas.Top="2" Stroke="#212121" StrokeThickness="1.5"/>
                        </Canvas>
                    </Viewbox>
                    <PasswordBox Grid.Column="1" x:Name="ConfirmPasswordBox" FontSize="16" Foreground="#212121" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"  PasswordChar="●"/>
                    <Button Grid.Column="2" Width="32" Height="32" Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                        <!-- Eye-off icon -->
                        <Path Data="M2,12C2,12 6,4 12,4C18,4 22,12 22,12C22,12 18,20 12,20C6,20 2,12 2,12Z M12,16C14.2091,16 16,14.2091 16,12C16,9.79086 14.2091,8 12,8C9.79086,8 8,9.79086 8,12C8,14.2091 9.79086,16 12,16Z M4,4L20,20" Stroke="#212121" StrokeThickness="1.5" Fill="Transparent"/>
                    </Button>
                </Grid>
            </Border>
            <!-- Log out all sessions -->
            <CheckBox Content="Log out all sessions" FontSize="16" Foreground="#212121" Margin="0,0,0,32" IsChecked="True"/>
            <!-- Save Button -->
            <Button Content="Save" Height="56" Background="#212121" Foreground="White" FontWeight="Bold" FontSize="18" BorderThickness="0" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Page> 