<Page x:Class="Atom.VPN.Demo.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Atom.VPN.Demo"
      mc:Ignorable="d"
      Title="Subscription"
      d:DesignHeight="700" 
      d:DesignWidth="460"
      Background="White"
      TextOptions.TextFormattingMode="Display"
      UseLayoutRounding="True">

    <Page.Resources>
        <!-- Font families -->
        <FontFamily x:Key="WorkSansRegular">/Atom.VPN.Demo;component/Resources/font/WorkSans-Regular.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansBold">/Atom.VPN.Demo;component/Resources/font/WorkSans-Bold.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansMedium">/Atom.VPN.Demo;component/Resources/font/WorkSans-Medium.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansSemiBold">/Atom.VPN.Demo;component/Resources/font/WorkSans-SemiBold.ttf#Work Sans</FontFamily>
        
        <!-- Styles -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" 
                                  Fill="#333333" 
                                  Width="24" 
                                  Height="24" 
                                  Stretch="Uniform"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PlanCardStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="PlanCardSelectedStyle" TargetType="Border" BasedOn="{StaticResource PlanCardStyle}">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#1F1F1F"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FD1414" Offset="0"/>
                        <GradientStop Color="#6863F7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SavePercentStyle" TargetType="Border">
            <Setter Property="Background" Value="#16D770"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="SavePercentTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource WorkSansBold}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="LineHeight" Value="14"/>
        </Style>
        
        <Style x:Key="NextButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#212121"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource WorkSansMedium}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#000000"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="FeatureTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource WorkSansBold}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="LineHeight" Value="19.6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Global gap from top -->
        <Rectangle Grid.Row="0" Height="25" Fill="Transparent"/>
        
        <!-- Header with back button -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="BackButton" 
                    Grid.Column="0"
                    Style="{StaticResource BackButtonStyle}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="15,0,0,0"
                    Click="BackButton_Click"/>
                
            <TextBlock Grid.Column="1"
                       Text="Subscription" 
                       FontFamily="{StaticResource WorkSansBold}" 
                       FontSize="20" 
                       FontWeight="Bold"
                       LineHeight="29"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="-40,0,0,0"/>
        </Grid>
        
        <!-- Feature section -->
        <StackPanel Grid.Row="2" Margin="25,20,25,0">
            <TextBlock Text="Unlimited access" 
                       FontFamily="{StaticResource WorkSansBold}"
                       FontSize="30"
                       FontWeight="Bold"
                       LineHeight="36"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,4"/>
                       
            <TextBlock Text="to all features" 
                       FontFamily="{StaticResource WorkSansBold}"
                       FontSize="30"
                       FontWeight="Bold"
                       LineHeight="36"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <!-- Features -->
            <StackPanel Margin="0,10,0,0">
                <!-- Feature 1 -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Path Grid.Column="0" 
                          Data="M12,2L1,21H23M12,6L19.53,19H4.47" 
                          Fill="#FFCA28" 
                          Width="18" 
                          Height="18"
                          Margin="0,0,15,0"/>
                          
                    <TextBlock Grid.Column="1" 
                               Text="Anonymous surfing" 
                               Style="{StaticResource FeatureTextStyle}"/>
                </Grid>
                
                <!-- Feature 2 -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Path Grid.Column="0" 
                          Data="M11.99,18.54L4.62,12.81L3,14.07L12,21.07L21,14.07L19.37,12.8L11.99,18.54M12,16L19.36,10.27L21,9L12,2L3,9L4.63,10.27L12,16"
                          Fill="#FFCA28" 
                          Width="18" 
                          Height="18"
                          Margin="0,0,15,0"/>
                          
                    <TextBlock Grid.Column="1" 
                               Text="The fastest servers" 
                               Style="{StaticResource FeatureTextStyle}"/>
                </Grid>
                
                <!-- Feature 3 -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Path Grid.Column="0" 
                          Data="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M12,5A3,3 0 0,1 15,8A3,3 0 0,1 12,11A3,3 0 0,1 9,8A3,3 0 0,1 12,5M17.13,17C15.92,18.85 14.11,20.24 12,20.92C9.89,20.24 8.08,18.85 6.87,17C6.53,16.5 6.24,16 6,15.47C6,13.82 8.71,12.47 12,12.47C15.29,12.47 18,13.79 18,15.47C17.76,16 17.47,16.5 17.13,17Z"
                          Fill="#FFCA28" 
                          Width="18" 
                          Height="18"
                          Margin="0,0,15,0"/>
                          
                    <TextBlock Grid.Column="1" 
                               Text="Traffic via encrypted tunnel" 
                               Style="{StaticResource FeatureTextStyle}"/>
                </Grid>
            </StackPanel>
            
            <!-- Separator -->
            <Border BorderBrush="#E0E0E0" 
                    BorderThickness="0,1,0,0" 
                    Margin="0,20,0,20" />
        </StackPanel>
        
        <!-- Subscription plans (without ScrollViewer) -->
        <StackPanel Grid.Row="3" Margin="25,0,25,20">
            <!-- 1 Month Plan -->
            <Border x:Name="Plan1Month" 
                    Style="{StaticResource PlanCardStyle}"
                    Tag="plan1Month"
                    MouseDown="PlanCard_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="1 Month" 
                                   FontFamily="{StaticResource WorkSansBold}"
                                   FontSize="16"/>
                        <TextBlock Text="1 Billed monthly" 
                                   FontFamily="{StaticResource WorkSansRegular}"
                                   Foreground="#757575"
                                   FontSize="14"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1" 
                               Text="$4.99" 
                               FontFamily="{StaticResource WorkSansBold}"
                               FontSize="20"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- 6 Months Plan -->
            <Border x:Name="Plan6Months" 
                    Style="{StaticResource PlanCardStyle}"
                    Tag="plan6Months"
                    MouseDown="PlanCard_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="6 Months" 
                                       FontFamily="{StaticResource WorkSansBold}"
                                       FontSize="16"/>
                                       
                            <Border Grid.Column="1" 
                                    Style="{StaticResource SavePercentStyle}"
                                    Margin="10,0,0,0">
                                <TextBlock Text="Save 15%" 
                                           Style="{StaticResource SavePercentTextStyle}"/>
                            </Border>
                        </Grid>
                        
                        <TextBlock Text="Save $10 annually" 
                                   FontFamily="{StaticResource WorkSansRegular}"
                                   Foreground="#757575"
                                   FontSize="14"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1" 
                               Text="$25.99" 
                               FontFamily="{StaticResource WorkSansBold}"
                               FontSize="20"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- 12 Months Plan -->
            <Border x:Name="Plan12Months" 
                    Style="{StaticResource PlanCardStyle}"
                    Tag="plan12Months"
                    MouseDown="PlanCard_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="12 Months" 
                                       FontFamily="{StaticResource WorkSansBold}"
                                       FontSize="16"/>
                                       
                            <Border Grid.Column="1" 
                                    Style="{StaticResource SavePercentStyle}"
                                    Margin="10,0,0,0">
                                <TextBlock Text="Save 30%" 
                                           Style="{StaticResource SavePercentTextStyle}"/>
                            </Border>
                        </Grid>
                        
                        <TextBlock Text="Save $20 annually" 
                                   FontFamily="{StaticResource WorkSansRegular}"
                                   Foreground="#757575"
                                   FontSize="14"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1" 
                               Text="$49.99" 
                               FontFamily="{StaticResource WorkSansBold}"
                               FontSize="20"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- 15 Months Plan -->
            <Border x:Name="Plan15Months" 
                    Style="{StaticResource PlanCardStyle}"
                    Tag="plan15Months"
                    MouseDown="PlanCard_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="15 Months" 
                                       FontFamily="{StaticResource WorkSansBold}"
                                       FontSize="16"/>
                                       
                            <Border Grid.Column="1" 
                                    Style="{StaticResource SavePercentStyle}"
                                    Margin="10,0,0,0">
                                <TextBlock Text="Save 30%" 
                                           Style="{StaticResource SavePercentTextStyle}"/>
                            </Border>
                        </Grid>
                        
                        <TextBlock Text="Save $30 annually" 
                                   FontFamily="{StaticResource WorkSansRegular}"
                                   Foreground="#757575"
                                   FontSize="14"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1" 
                               Text="$69.99" 
                               FontFamily="{StaticResource WorkSansBold}"
                               FontSize="20"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Next button -->
            <Button x:Name="NextButton" 
                    Content="Next" 
                    Style="{StaticResource NextButtonStyle}"
                    Margin="0,15,0,0"
                    Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Page> 