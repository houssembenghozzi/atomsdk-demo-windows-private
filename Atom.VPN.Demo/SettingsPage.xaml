<Page x:Class="Atom.VPN.Demo.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="1000" d:DesignWidth="460"
      Title="SettingsPage"
      Background="#FAFAFA"
      Loaded="Page_Loaded">

    <Grid>
        <!-- Background world map image - light version -->
        <Image Source="/Resources/icon/bg-light.svg"
               Stretch="UniformToFill"
               Opacity="0.07"/>

        <Grid Margin="16,40,16,40" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with back button and title -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BackButton"
                        Width="24"
                        Height="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,0,14,0"
                        VerticalAlignment="Center"
                        Click="BackButton_Click">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="#323438"
                          Width="20"
                          Height="20"
                          Stretch="Uniform"/>
                </Button>
                <TextBlock Grid.Column="1"
                           Text="Setting"
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="#323438"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Settings content -->
            <StackPanel Grid.Row="1" Width="408">
                <!-- Protocol Setting -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8" MouseDown="ProtocolRow_MouseDown" Cursor="Hand">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Protocol" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                        <TextBlock Grid.Column="1" Text="Automatic" FontSize="16" Foreground="#00D36D" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    </Grid>
                </Border>

                <!-- Run on Start up -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Run on Start up" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                        <ToggleButton Grid.Column="1" IsChecked="True" Style="{StaticResource ToggleSwitchStyle}" Margin="0,0,16,0"/>
                    </Grid>
                </Border>

                <!-- Allow notification -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Allow notification" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                        <ToggleButton Grid.Column="1" IsChecked="False" Style="{StaticResource ToggleSwitchStyle}" Margin="0,0,16,0"/>
                    </Grid>
                </Border>

                <!-- Tracker Blocker -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tracker Blocker" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                        <ToggleButton Grid.Column="1" IsChecked="False" Style="{StaticResource ToggleSwitchStyle}" Margin="0,0,16,0"/>
                    </Grid>
                </Border>

                <!-- Split tunnelling -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="64">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Margin="16,0,0,0" MouseDown="SplitTunnelingRow_MouseDown" Cursor="Hand">
                            <TextBlock Text="Split tunnelling" FontSize="16" Foreground="#212121"/>
                            <TextBlock Text="Manage Connection on a per-app basis" FontSize="12" Foreground="#757575"/>
                        </StackPanel>
                        <ToggleButton Grid.Column="1" IsChecked="False" Style="{StaticResource ToggleSwitchStyle}" Margin="0,0,16,0"/>
                    </Grid>
                </Border>

                <!-- Language -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8" MouseDown="LanguageRow_MouseDown" Cursor="Hand">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Language" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                        <TextBlock Grid.Column="1" Text="English (US)" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Path Grid.Column="2" 
                              Data="M7.25391 5.05911L13.0105 10.8157L7.25391 16.5723" 
                              Stroke="#212121" 
                              StrokeThickness="1.48026" 
                              StrokeLineJoin="Round" 
                              StrokeStartLineCap="Round" 
                              StrokeEndLineCap="Round" 
                              Width="12" 
                              Height="6" 
                              Stretch="Uniform" 
                              VerticalAlignment="Center" 
                              Margin="0,0,16,0"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page> 