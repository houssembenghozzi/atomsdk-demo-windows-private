<Page x:Class="Atom.VPN.Demo.LanguagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="1000" d:DesignWidth="460"
      Title="Languages"
      Background="#FAFAFA">

    <Grid>
        <!-- Background world map image - light version -->
        <Image Source="/Resources/icon/bg-light.svg"
               Stretch="UniformToFill"
               Opacity="0.07"/>

        <Grid Margin="16,40,16,40" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with back button and title -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BackButton"
                        Width="24"
                        Height="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,0,14,0"
                        VerticalAlignment="Center"
                        Click="BackButton_Click">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="#323438"
                          Width="20"
                          Height="20"
                          Stretch="Uniform"/>
                </Button>
                <TextBlock Grid.Column="1"
                           Text="Languages"
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="#323438"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Language Options -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Width="408">
                    <!-- Suggested Section -->
                    <TextBlock Text="Suggested" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#323438" 
                               Margin="0,0,0,16"/>

                    <!-- English (US) -->
                    <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                        <Grid Height="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="English (US)" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <RadioButton x:Name="EnglishUS" Grid.Column="1" GroupName="LanguageGroup" IsChecked="True" 
                                        VerticalAlignment="Center" Margin="0,0,16,0"
                                        Style="{StaticResource ProtocolRadioButtonStyle}"
                                        Checked="Language_Checked" Tag="English (US)"/>
                        </Grid>
                    </Border>

                    <!-- English (UK) -->
                    <Border Background="White" CornerRadius="12" Margin="0,0,0,24">
                        <Grid Height="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="English (UK)" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <RadioButton x:Name="EnglishUK" Grid.Column="1" GroupName="LanguageGroup" IsChecked="False" 
                                        VerticalAlignment="Center" Margin="0,0,16,0"
                                        Style="{StaticResource ProtocolRadioButtonStyle}"
                                        Checked="Language_Checked" Tag="English (UK)"/>
                        </Grid>
                    </Border>

                    <!-- Language Section -->
                    <TextBlock Text="Language" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#323438" 
                               Margin="0,0,0,16"/>

                    <!-- Mandarin -->
                    <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                        <Grid Height="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Mandarin" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <RadioButton x:Name="Mandarin" Grid.Column="1" GroupName="LanguageGroup" IsChecked="False" 
                                        VerticalAlignment="Center" Margin="0,0,16,0"
                                        Style="{StaticResource ProtocolRadioButtonStyle}"
                                        Checked="Language_Checked" Tag="Mandarin"/>
                        </Grid>
                    </Border>

                    <!-- Hindi -->
                    <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                        <Grid Height="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Hindi" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <RadioButton x:Name="Hindi" Grid.Column="1" GroupName="LanguageGroup" IsChecked="False" 
                                        VerticalAlignment="Center" Margin="0,0,16,0"
                                        Style="{StaticResource ProtocolRadioButtonStyle}"
                                        Checked="Language_Checked" Tag="Hindi"/>
                        </Grid>
                    </Border>

                    <!-- Spanish -->
                    <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                        <Grid Height="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Spanish" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <RadioButton x:Name="Spanish" Grid.Column="1" GroupName="LanguageGroup" IsChecked="False" 
                                        VerticalAlignment="Center" Margin="0,0,16,0"
                                        Style="{StaticResource ProtocolRadioButtonStyle}"
                                        Checked="Language_Checked" Tag="Spanish"/>
                        </Grid>
                    </Border>

                    <!-- French -->
                    <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                        <Grid Height="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="French" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <RadioButton x:Name="French" Grid.Column="1" GroupName="LanguageGroup" IsChecked="False" 
                                        VerticalAlignment="Center" Margin="0,0,16,0"
                                        Style="{StaticResource ProtocolRadioButtonStyle}"
                                        Checked="Language_Checked" Tag="French"/>
                        </Grid>
                    </Border>

                    <!-- Arabic -->
                    <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                        <Grid Height="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Arabic" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <RadioButton x:Name="Arabic" Grid.Column="1" GroupName="LanguageGroup" IsChecked="False" 
                                        VerticalAlignment="Center" Margin="0,0,16,0"
                                        Style="{StaticResource ProtocolRadioButtonStyle}"
                                        Checked="Language_Checked" Tag="Arabic"/>
                        </Grid>
                    </Border>

                    <!-- Bengali -->
                    <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                        <Grid Height="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Bengali" FontSize="16" Foreground="#212121" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <RadioButton x:Name="Bengali" Grid.Column="1" GroupName="LanguageGroup" IsChecked="False" 
                                        VerticalAlignment="Center" Margin="0,0,16,0"
                                        Style="{StaticResource ProtocolRadioButtonStyle}"
                                        Checked="Language_Checked" Tag="Bengali"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Save Button -->
            <Button Grid.Row="2" 
                    Content="Save" 
                    Margin="0,20,0,0"
                    Height="48"
                    Background="#212121"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Click="SaveButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="24"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page> 