<Window x:Class="Atom.VPN.Demo.ResetPasswordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atom.VPN.Demo"
        mc:Ignorable="d"
        Title="Atom VPN - Reset Password" 
        Height="700" 
        Width="460" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        TextOptions.TextFormattingMode="Display"
        UseLayoutRounding="True">
    
    <Window.Resources>
        <!-- Font families -->
        <FontFamily x:Key="WorkSansRegular">/Atom.VPN.Demo;component/Resources/font/WorkSans-Regular.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansBold">/Atom.VPN.Demo;component/Resources/font/WorkSans-Bold.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansMedium">/Atom.VPN.Demo;component/Resources/font/WorkSans-Medium.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="PlusJakartaSans">Segoe UI</FontFamily> <!-- Fallback for Plus Jakarta Sans -->
        
        <!-- Password box styles -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" 
                                BorderBrush="#BEBEBE" 
                                BorderThickness="1" 
                                CornerRadius="30"
                                Background="Transparent"
                                Padding="16,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="24"/>
                                </Grid.ColumnDefinitions>
                                
                                <Image x:Name="iconImage" Grid.Column="0" Source="/Resources/icon/lock.svg" Width="24" Height="24" Opacity="0.7"/>
                                <ScrollViewer Grid.Column="2" x:Name="PART_ContentHost" Focusable="false"/>
                                <TextBlock Grid.Column="2" 
                                           x:Name="Placeholder" 
                                           Text="Password" 
                                           Foreground="#BEBEBE" 
                                           FontFamily="{StaticResource WorkSansMedium}" 
                                           FontSize="14"
                                           FontWeight="Medium"/>
                                <Button Grid.Column="3" x:Name="ShowPasswordButton" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Image Source="/Resources/icon/eye.svg" Width="24" Height="24" Opacity="0.7"/>
                                </Button>
                                <Button Grid.Column="3" x:Name="HidePasswordButton" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Image Source="/Resources/icon/eye-slash.svg" Width="24" Height="24" Opacity="0.7"/>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#212121"/>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="iconImage" Property="Opacity" Value="1.0"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="False">
                                <Setter TargetName="iconImage" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="{StaticResource WorkSansMedium}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#323438"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
        
        <!-- Button styles -->
        <Style x:Key="ResetButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="#212121" 
                                CornerRadius="30"
                                Height="58">
                            <TextBlock Text="Reset Password" 
                                       FontFamily="{StaticResource WorkSansBold}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#111111"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Back button style -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Path Data="M16,16H0V0" Fill="Transparent" Stroke="#212121" StrokeThickness="2" Width="16" Height="16"/>
                            <TextBlock Grid.Column="2" Text="Back" FontFamily="{StaticResource PlusJakartaSans}" FontWeight="Bold" FontSize="14" Foreground="#212121"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="0" SnapsToDevicePixels="True">
        <!-- Logo -->
        <Grid VerticalAlignment="Top" Margin="30,20,0,0">
            <Image Source="/Resources/Images/fortis_icon.png" Width="52" Height="52" HorizontalAlignment="Left"/>
        </Grid>
        
        <!-- Back Button -->
        <Button Style="{StaticResource BackButtonStyle}" 
                VerticalAlignment="Top"
                Margin="30,30,0,0"
                Click="Back_Click"/>
        
        <!-- Content -->
        <StackPanel VerticalAlignment="Center" Margin="30,-30,30,0">
            <!-- Title Section -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Reset Password" 
                           FontFamily="{StaticResource WorkSansBold}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#323438" 
                           Margin="0,0,0,8"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
                <TextBlock x:Name="EmailInfoTextBlock"
                           Text="Reset password for email@email.com" 
                           FontFamily="{StaticResource WorkSansRegular}" 
                           FontSize="16" 
                           Foreground="#323438"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
            </StackPanel>
            
            <!-- Form Section -->
            <StackPanel Margin="0,0,0,20">
                <!-- Password Input -->
                <PasswordBox x:Name="PasswordBox" 
                             Style="{StaticResource PasswordBoxStyle}" 
                             Margin="0,0,0,20"/>
                
                <!-- Confirm Password Input -->
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Style="{StaticResource PasswordBoxStyle}" 
                             Margin="0,0,0,0"/>
            </StackPanel>
            
            <!-- Reset Button -->
            <Button Style="{StaticResource ResetButtonStyle}" 
                    Margin="0,40,0,60"
                    Click="ResetPassword_Click"/>
        </StackPanel>
    </Grid>
</Window> 