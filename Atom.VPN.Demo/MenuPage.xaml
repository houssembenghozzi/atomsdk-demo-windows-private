<Page x:Class="Atom.VPN.Demo.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atom.VPN.Demo"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="460"
      Title="MenuPage"
      Background="#FAFAFA">

    <Grid>
        <!-- Background world map image - light version -->
        <Image Source="/Resources/icon/bg-light.svg" 
               Stretch="UniformToFill"
               Opacity="0.07"/>
               
        <!-- Main content -->
        <Grid Margin="26,40,26,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header with back button and title -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="BackButton" 
                        Width="24" 
                        Height="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,0,14,0"
                        VerticalAlignment="Center"
                        Click="BackButton_Click">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" 
                          Fill="#323438" 
                          Width="20" 
                          Height="20" 
                          Stretch="Uniform"/>
                </Button>
                
                <TextBlock Grid.Column="1" 
                           Text="Menu" 
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="#323438"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Premium banner -->
            <Border Grid.Row="1" 
                    Background="#1F1F1F" 
                    CornerRadius="12"
                    BorderThickness="2"
                    Margin="0,0,0,16"
                    Height="111">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Color="#FD1414" Offset="0"/>
                        <GradientStop Color="#6863F6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="24" Opacity="0.05" Color="#04060F"/>
                </Border.Effect>
                <Grid Margin="14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Top section with title and days left -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Free trial info -->
                        <StackPanel>
                            <TextBlock Text="Free trial" 
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Foreground="White"/>
                            <TextBlock Text="3.5GB/5GB" 
                                       FontWeight="Light"
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="0,7,0,0"/>
                        </StackPanel>
                        
                        <!-- Days left counter -->
                        <Border Grid.Column="1" 
                                Background="#2D3035" 
                                CornerRadius="16" 
                                Width="56" 
                                Height="56">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="2" 
                                           FontSize="24"
                                           Foreground="White"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Days Left" 
                                           FontWeight="Light"
                                           FontSize="10"
                                           Foreground="#A1A1AC"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Upgrade button -->
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom">
                        <TextBlock Text="Upgrade Now" 
                                   FontSize="16"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <Path Data="M16.172 11L10.808 5.636L12.222 4.222L20 12L12.222 19.778L10.808 18.364L16.172 13H4V11H16.172Z"
                              Fill="White"
                              Width="20"
                              Height="20"
                              Margin="10,0,0,0"
                              Stretch="Uniform"
                              VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Menu items -->
            <StackPanel Grid.Row="2" Margin="0,16,0,0">
                <!-- Divider -->
                <Rectangle Height="1" Fill="#EEEEEE" Width="408" Margin="0,0,0,16"/>
                
                <!-- Account -->
                <Grid Height="50" Margin="0,0,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Width="24" Height="24" Margin="0,0,10,0">
                        <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                              Stroke="#212121"
                              StrokeThickness="1.5"
                              Fill="Transparent"
                              Stretch="Uniform"/>
                    </Border>
                    
                    <TextBlock Grid.Column="1" 
                               Text="Account" 
                               FontSize="18"
                               Foreground="#212121"
                               VerticalAlignment="Center"/>
                    
                    <Path Grid.Column="2" 
                          Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                          Stroke="#212121"
                          StrokeThickness="1.5"
                          Width="8"
                          Height="12"
                          Stretch="Uniform"/>
                </Grid>
                
                <!-- Settings -->
                <Grid Height="50" Margin="0,0,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Width="24" Height="24" Margin="0,0,10,0">
                        <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                              Stroke="#212121"
                              StrokeThickness="1.5"
                              Fill="Transparent"
                              Stretch="Uniform"/>
                    </Border>
                    
                    <TextBlock Grid.Column="1" 
                               Text="Settings" 
                               FontSize="18"
                               Foreground="#212121"
                               VerticalAlignment="Center"/>
                    
                    <Path Grid.Column="2" 
                          Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                          Stroke="#212121"
                          StrokeThickness="1.5"
                          Width="8"
                          Height="12"
                          Stretch="Uniform"/>
                </Grid>
                
                <!-- Help Center -->
                <Grid Height="50" Margin="0,0,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Width="24" Height="24" Margin="0,0,10,0">
                        <Path Data="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z"
                              Stroke="#212121"
                              StrokeThickness="1.5"
                              Fill="Transparent"
                              Stretch="Uniform"/>
                    </Border>
                    
                    <TextBlock Grid.Column="1" 
                               Text="Help Center" 
                               FontSize="18"
                               Foreground="#212121"
                               VerticalAlignment="Center"/>
                    
                    <Path Grid.Column="2" 
                          Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                          Stroke="#212121"
                          StrokeThickness="1.5"
                          Width="8"
                          Height="12"
                          Stretch="Uniform"/>
                </Grid>
                
                <!-- Invite Friends -->
                <Grid Height="50" Margin="0,0,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Width="24" Height="24" Margin="0,0,10,0">
                        <Path Data="M16,13C15.71,13 15.38,13 15.03,13.05C16.19,13.89 17,15 17,16.5V19H23V16.5C23,14.17 18.33,13 16,13M8,13C5.67,13 1,14.17 1,16.5V19H15V16.5C15,14.17 10.33,13 8,13M8,11A3,3 0 0,0 11,8A3,3 0 0,0 8,5A3,3 0 0,0 5,8A3,3 0 0,0 8,11M16,11A3,3 0 0,0 19,8A3,3 0 0,0 16,5A3,3 0 0,0 13,8A3,3 0 0,0 16,11Z"
                              Stroke="#212121"
                              StrokeThickness="1.5"
                              Fill="Transparent"
                              Stretch="Uniform"/>
                    </Border>
                    
                    <TextBlock Grid.Column="1" 
                               Text="Invite Friends" 
                               FontSize="18"
                               Foreground="#212121"
                               VerticalAlignment="Center"/>
                    
                    <Path Grid.Column="2" 
                          Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                          Stroke="#212121"
                          StrokeThickness="1.5"
                          Width="8"
                          Height="12"
                          Stretch="Uniform"/>
                </Grid>
                
                <!-- Logout -->
                <Grid Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Width="24" Height="24" Margin="0,0,10,0">
                        <Path Data="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z"
                              Stroke="#F75555"
                              StrokeThickness="1.5"
                              Fill="Transparent"
                              Stretch="Uniform"/>
                    </Border>
                    
                    <TextBlock Grid.Column="1" 
                               Text="Logout" 
                               FontSize="18"
                               Foreground="#F75555"
                               VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page> 