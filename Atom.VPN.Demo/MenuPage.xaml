                          Fill="#323438" 
                          Width="20" 
                          Height="20" 
                          Stretch="Uniform"/>
                </Button>
                
                <TextBlock Grid.Column="1" 
                           Text="Menu" 
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="#323438"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Premium banner - Row 1 -->
            <Border Grid.Row="1" 
                    Background="#1F1F1F" 
                    CornerRadius="12"
                    BorderThickness="2"
                    Margin="0,0,0,16"
                    Height="111"
                    Width="408">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Color="#FD1414" Offset="0"/>
                        <GradientStop Color="#6863F6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="24" Opacity="0.05" Color="#04060F"/>
                </Border.Effect>
                <Grid Margin="14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Top section with title and days left -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Free trial info -->
                        <StackPanel>
                            <TextBlock Text="Free trial" 
                                       FontWeight="ExtraBold"
                                       FontSize="18"
                                       Foreground="White"/>
                            <TextBlock Text="3.5GB/5GB" 
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="0,7,0,0"/>
                        </StackPanel>
                        
                        <!-- Days left counter -->
                        <Border Grid.Column="1" 
                                Background="#2D3035" 
                                CornerRadius="16" 
                                Width="56" 
                                Height="56">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="2" 
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Days Left" 
                                           FontSize="10"
                                           Foreground="#A1A1AC"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
