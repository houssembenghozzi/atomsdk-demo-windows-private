    <Grid>
        <!-- Background world map image - light version -->
        <Image Source="/Resources/icon/bg-light.svg" 
               Stretch="UniformToFill"
               Opacity="0.07"/>
               
        <!-- Main content with reduced side margins to match screenshot -->
        <Grid Margin="16,40,16,40" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Top menu title -->
                <RowDefinition Height="Auto"/> <!-- Free trial card -->
                <RowDefinition Height="auto"/>    <!-- Menu items -->
            </Grid.RowDefinitions>
            
            <!-- Header with back button and title - Row 0 -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
