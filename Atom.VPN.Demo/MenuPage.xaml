                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom">
                        <TextBlock Text="Upgrade Now" 
                                   FontSize="16"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
