<Window x:Class="Atom.VPN.Demo.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atom.VPN.Demo"
        mc:Ignorable="d"
        Title="Atom VPN - Forgot Password" 
        Height="700" 
        Width="460" 
        WindowStartupLocation="CenterScreen"
        
        ResizeMode="NoResize"
        
        Background="#FAFAFA"
        TextOptions.TextFormattingMode="Display"
        UseLayoutRounding="True">
    
    <Window.Resources>
        <!-- Standard shadow for components -->
        <DropShadowEffect x:Key="StandardShadow" 
                          ShadowDepth="1" 
                          Direction="270" 
                          Color="#20000000" 
                          BlurRadius="10" 
                          Opacity="0.3"/>
        
        <!-- Font families -->
        <FontFamily x:Key="GTWalsheimPro">/Atom.VPN.Demo;component/Resources/font/GT-Walsheim-Regular-Trial-BF651b7fc71a47d.otf#GT Walsheim Pro</FontFamily>
        <FontFamily x:Key="GTWalsheimProBold">/Atom.VPN.Demo;component/Resources/font/GT-Walsheim-Bold-Trial-BF651b7fc737c57.otf#GT Walsheim Pro</FontFamily>
        <FontFamily x:Key="GTWalsheimProMedium">/Atom.VPN.Demo;component/Resources/font/GT-Walsheim-Medium-Trial-BF651b7fc728fb3.otf#GT Walsheim Pro</FontFamily>
        <FontFamily x:Key="PlusJakartaSans">Segoe UI</FontFamily> <!-- Fallback for Plus Jakarta Sans -->
        
        <!-- Text box styles -->
        <Style x:Key="EmailTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                BorderBrush="#BEBEBE" 
                                BorderThickness="1" 
                                CornerRadius="30"
                                Background="Transparent"
                                Padding="16,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Image x:Name="iconImage" Grid.Column="0" Source="/Resources/icon/mail.svg" Width="24" Height="24" Opacity="0.7"/>
                                <ScrollViewer Grid.Column="2" x:Name="PART_ContentHost" Focusable="false"/>
                                <TextBlock Grid.Column="2" 
                                           x:Name="Placeholder" 
                                           Text="email@email.com" 
                                           Foreground="#BEBEBE" 
                                           FontFamily="{StaticResource GTWalsheimPro}" 
                                           FontSize="16"/>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#212121"/>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="iconImage" Property="Opacity" Value="1.0"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="False">
                                <Setter TargetName="iconImage" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsFocused" Value="True"/>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="{StaticResource GTWalsheimPro}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#323438"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
        
        <!-- Button styles -->
        <Style x:Key="NextButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="#212121" 
                                CornerRadius="30"
                                Height="58">
                            <TextBlock Text="Next" 
                                       FontFamily="{StaticResource GTWalsheimProBold}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#111111"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="BackToLoginButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="Back to Login" 
                                   FontFamily="{StaticResource PlusJakartaSans}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#212121"/>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="0" SnapsToDevicePixels="True">
        <!-- Logo -->
        <Grid VerticalAlignment="Top" Margin="30,20,0,0">
            <Image Source="/Resources/Images/fortis_icon.png" Width="52" Height="52" HorizontalAlignment="Left"/>
        </Grid>
        
        <!-- Content -->
        <StackPanel VerticalAlignment="Center" Margin="30,-30,30,0">
            <!-- Title Section -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Forgot Password" 
                           FontFamily="{StaticResource GTWalsheimProBold}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#323438" 
                           Margin="0,0,0,8"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
                <TextBlock Text="Please enter your email address to reset your password." 
                           FontFamily="{StaticResource GTWalsheimPro}" 
                           FontSize="16" 
                           Foreground="#323438"
                           TextWrapping="Wrap"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
            </StackPanel>
            
            <!-- Form Section -->
            <StackPanel Margin="0,0,0,20">
                <!-- Email Input -->
                <TextBox x:Name="EmailTextBox" 
                         Style="{StaticResource EmailTextBoxStyle}" 
                         Margin="0,0,0,4"/>
                
                <!-- Error message -->
                <TextBlock x:Name="EmailErrorMessage"
                           Foreground="#E53935"
                           FontSize="12"
                           FontFamily="{StaticResource GTWalsheimPro}"
                           Margin="16,0,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
            
            <!-- Next Button -->
            <Button x:Name="NextButton"
                    Style="{StaticResource NextButtonStyle}" 
                    Margin="0,0,0,60"
                    Click="NextButton_Click"/>
        </StackPanel>
        
        <!-- Back to Login Link (at bottom) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30">
            <TextBlock Text="Remember your password? " 
                       FontFamily="{StaticResource PlusJakartaSans}" 
                       FontSize="14" 
                       Foreground="#212121" 
                       VerticalAlignment="Center" 
                       Margin="0,0,4,0"/>
            <Button Style="{StaticResource BackToLoginButtonStyle}" 
                    VerticalAlignment="Center"
                    Click="BackToLogin_Click"/>
        </StackPanel>
        
        <!-- Custom MessageBox Overlay -->
        <Grid x:Name="CustomMessageBoxUI" Visibility="Collapsed" Panel.ZIndex="999">
            <!-- Semi-transparent background overlay -->
            <Rectangle Fill="#80000000" />
            
            <!-- Message Box Container -->
            <Border Width="400" 
                    Background="White" 
                    CornerRadius="8"
                    BorderThickness="0"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Effect="{StaticResource StandardShadow}">
                <Grid>
                    <!-- Header -->
                    <Grid Height="40" VerticalAlignment="Top" Background="#f0f0f0">
                        <TextBlock Text="Email Sent" 
                                   FontFamily="{StaticResource GTWalsheimProBold}"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="#212121" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="15,0,0,0"/>
                        
                        <Button x:Name="CloseButton" 
                                Content="Ã—" 
                                FontSize="18" 
                                Width="40" 
                                Height="40"
                                Background="Transparent"
                                Foreground="#212121"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Click="CloseMessageBox_Click"
                                Cursor="Hand"/>
                    </Grid>
                    
                    <!-- Content - Simplified with just a TextBlock and Button -->
                    <StackPanel Margin="20,50,20,20">
                        <!-- Message Text -->
                        <TextBlock x:Name="MessageText" 
                                   Text="A password reset link has been sent to your email."
                                   FontFamily="{StaticResource GTWalsheimPro}"
                                   FontSize="14" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,20"/>
                        
                        <!-- OK Button -->
                        <Button Content="OK" 
                                Width="80" 
                                Height="30"
                                Background="#E1E1E1"
                                Foreground="#212121"
                                FontFamily="{StaticResource GTWalsheimPro}"
                                HorizontalAlignment="Right"
                                Click="CloseMessageBox_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="#CCCCCC"
                                            BorderThickness="1"
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D1D1D1"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#C1C1C1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window> 