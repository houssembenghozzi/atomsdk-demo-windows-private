<Window x:Class="Atom.VPN.Demo.AccountDeletionRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Deletion Request"
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="28">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="16" 
            BorderThickness="0"
            Padding="24,24,24,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Success Icon -->
            <Ellipse Grid.Row="0" 
                     Width="48" 
                     Height="48" 
                     Fill="#00E676" 
                     HorizontalAlignment="Center"
                     Margin="0,0,0,24">
            </Ellipse>
            
            <!-- Check Mark -->
            <Path Grid.Row="0" 
                  Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z" 
                  Fill="White"
                  Width="24"
                  Height="24"
                  Stretch="Uniform"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Margin="0,0,0,24"/>
            
            <!-- Title -->
            <TextBlock Grid.Row="1" 
                       Text="Account deletions request sent" 
                       FontWeight="Bold" 
                       FontSize="18" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,16"/>
            
            <!-- Message -->
            <TextBlock Grid.Row="2" 
                       Text="Your request has been received and we will review the request. You will receive a confirmation email after account deletion has been completed." 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="#444444"
                       Margin="0,0,0,24"/>
            
            <!-- Button -->
            <Button Grid.Row="4" 
                    Content="Ok" 
                    Height="56" 
                    Background="#212121" 
                    Foreground="White" 
                    FontWeight="SemiBold"
                    FontSize="16" 
                    BorderThickness="0" 
                    Margin="40,0,40,0"
                    Click="OkButton_Click"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Border>
</Window> 