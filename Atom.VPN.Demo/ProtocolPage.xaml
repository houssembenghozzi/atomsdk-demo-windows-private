<Page x:Class="Atom.VPN.Demo.ProtocolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="1000" d:DesignWidth="460"
      Title="Protocol"
      Background="#FAFAFA">

    <Grid>
        <!-- Background world map image - light version -->
        <Image Source="/Resources/icon/bg-light.svg"
               Stretch="UniformToFill"
               Opacity="0.07"/>

        <Grid Margin="16,40,16,40" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with back button and title -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BackButton"
                        Width="24"
                        Height="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,0,14,0"
                        VerticalAlignment="Center"
                        Click="BackButton_Click">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="#323438"
                          Width="20"
                          Height="20"
                          Stretch="Uniform"/>
                </Button>
                <TextBlock Grid.Column="1"
                           Text="Protocol"
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="#323438"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Protocol Options -->
            <StackPanel Grid.Row="1" Width="408">
                <!-- Automatic -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Margin="16,0,0,0">
                            <TextBlock Text="Automatic" FontSize="16" Foreground="#212121"/>
                            <TextBlock Text="Fortis VPN will automatically pick the protocol most appropriate for your network." 
                                       FontSize="12" Foreground="#757575" TextWrapping="Wrap"/>
                        </StackPanel>
                        <RadioButton Grid.Column="1" GroupName="ProtocolGroup" IsChecked="True" 
                                    VerticalAlignment="Center" Margin="0,0,16,0"
                                    Style="{StaticResource ProtocolRadioButtonStyle}"/>
                    </Grid>
                </Border>

                <!-- WireGuard -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Margin="16,0,0,0">
                            <TextBlock Text="WireGuard" FontSize="16" Foreground="#212121"/>
                            <TextBlock Text="Optimized for speed, security, and reliability" 
                                       FontSize="12" Foreground="#757575" TextWrapping="Wrap"/>
                        </StackPanel>
                        <RadioButton Grid.Column="1" GroupName="ProtocolGroup" IsChecked="False" 
                                    VerticalAlignment="Center" Margin="0,0,16,0"
                                    Style="{StaticResource ProtocolRadioButtonStyle}"/>
                    </Grid>
                </Border>

                <!-- OpenVPN -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Margin="16,0,0,0">
                            <TextBlock Text="OpenVPN" FontSize="16" Foreground="#212121"/>
                            <TextBlock Text="May be slower than Light way - UDP but connects better on certain networks." 
                                       FontSize="12" Foreground="#757575" TextWrapping="Wrap"/>
                        </StackPanel>
                        <RadioButton Grid.Column="1" GroupName="ProtocolGroup" IsChecked="False" 
                                    VerticalAlignment="Center" Margin="0,0,16,0"
                                    Style="{StaticResource ProtocolRadioButtonStyle}"/>
                    </Grid>
                </Border>
                
                <!-- Advanced Options for OpenVPN -->
                <TextBlock Text="Advanced options" Foreground="#00D36D" FontSize="14" 
                           Margin="16,0,0,8" HorizontalAlignment="Left" Cursor="Hand"/>

                <!-- IKEV2 -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Margin="16,0,0,0">
                            <TextBlock Text="IKEV2" FontSize="16" Foreground="#212121"/>
                            <TextBlock Text="Good combination of speed and security, but may not work on all networks." 
                                       FontSize="12" Foreground="#757575" TextWrapping="Wrap"/>
                        </StackPanel>
                        <RadioButton Grid.Column="1" GroupName="ProtocolGroup" IsChecked="False" 
                                    VerticalAlignment="Center" Margin="0,0,16,0"
                                    Style="{StaticResource ProtocolRadioButtonStyle}"/>
                    </Grid>
                </Border>

                <!-- IPSec -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Margin="16,0,0,0">
                            <TextBlock Text="IPSec" FontSize="16" Foreground="#212121"/>
                            <TextBlock Text="Likely to function on all types of networks, but might be slower than OpenVPN - UDP." 
                                       FontSize="12" Foreground="#757575" TextWrapping="Wrap"/>
                        </StackPanel>
                        <RadioButton Grid.Column="1" GroupName="ProtocolGroup" IsChecked="False" 
                                    VerticalAlignment="Center" Margin="0,0,16,0"
                                    Style="{StaticResource ProtocolRadioButtonStyle}"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page> 