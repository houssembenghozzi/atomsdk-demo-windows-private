<Page x:Class="Atom.VPN.Demo.AddOnPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Atom.VPN.Demo"
      mc:Ignorable="d"
      Title="Add-on"
      Width="420" 
      Height="650"
      Background="Transparent"
      TextOptions.TextFormattingMode="Display"
      UseLayoutRounding="True">

    <Page.Resources>
        <!-- Font families -->
        <FontFamily x:Key="WorkSansRegular">/Atom.VPN.Demo;component/Resources/font/WorkSans-Regular.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansBold">/Atom.VPN.Demo;component/Resources/font/WorkSans-Bold.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansMedium">/Atom.VPN.Demo;component/Resources/font/WorkSans-Medium.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansSemiBold">/Atom.VPN.Demo;component/Resources/font/WorkSans-SemiBold.ttf#Work Sans</FontFamily>
        
        <!-- Styles -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" 
                                  Fill="#333333" 
                                  Width="24" 
                                  Height="24" 
                                  Stretch="Uniform"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="FeatureTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource WorkSansBold}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="LineHeight" Value="19.6"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="AddOnCardStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
        </Style>
        
        <Style x:Key="SummaryRowStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,8,0,8"/>
        </Style>
        
        <Style x:Key="SummaryLabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource WorkSansRegular}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="SummaryValueStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource WorkSansBold}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                  Fill="#757575" 
                                  Width="16" 
                                  Height="16" 
                                  Stretch="Uniform"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Toggle Button Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="BackgroundElement" 
                                    Background="#E6E6E6" 
                                    Width="46" 
                                    Height="24" 
                                    CornerRadius="12"/>
                            <Border x:Name="ThumbElement" 
                                    Background="White" 
                                    Width="20" 
                                    Height="20" 
                                    CornerRadius="10"
                                    HorizontalAlignment="Left"
                                    Margin="2,2,0,0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3" />
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundElement" Property="Background" Value="#16D770"/>
                                <Setter TargetName="ThumbElement" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="ThumbElement" Property="Margin" Value="0,2,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#212121"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource WorkSansMedium}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#212121" 
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="#000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Border CornerRadius="24,24,0,0" Background="White">
        <Grid Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Global gap from top -->
            <Rectangle Grid.Row="0" Height="25" Fill="Transparent"/>
            
            <!-- Header with back button -->
            <Grid Grid.Row="1" Margin="15,0,15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="BackButton" 
                        Grid.Column="0"
                        Style="{StaticResource BackButtonStyle}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="BackButton_Click"/>
                    
                <TextBlock Grid.Column="1"
                           Text="Payment" 
                           FontFamily="{StaticResource WorkSansBold}" 
                           FontSize="20" 
                           FontWeight="Bold"
                           LineHeight="29"
                           Foreground="#212121"
                           HorizontalAlignment="Left"
                           Margin="15,0,0,0"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Feature section with center-aligned features -->
            <StackPanel Grid.Row="2" Margin="25,10,25,0">
                <TextBlock Text="Unlimited access" 
                           FontFamily="{StaticResource WorkSansBold}"
                           FontSize="30"
                           FontWeight="Bold"
                           LineHeight="36"
                           Foreground="#212121"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,4"/>
                           
                <TextBlock Text="to all feature" 
                           FontFamily="{StaticResource WorkSansBold}"
                           FontSize="30"
                           FontWeight="Bold"
                           LineHeight="36"
                           Foreground="#212121"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <!-- Features - center aligned -->
                <StackPanel Margin="0,0,0,0" HorizontalAlignment="Center">
                    <!-- Feature 1 -->
                    <Grid Margin="0,6" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Path Grid.Column="0" 
                              Data="M12,2L1,21H23M12,6L19.53,19H4.47" 
                              Fill="#FFCA28" 
                              Width="18" 
                              Height="18"
                              Margin="0,0,15,0"/>
                              
                        <TextBlock Grid.Column="1" 
                                   Text="Anonymous surfing" 
                                   Style="{StaticResource FeatureTextStyle}"/>
                    </Grid>
                    
                    <!-- Feature 2 -->
                    <Grid Margin="0,6" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Path Grid.Column="0" 
                              Data="M11.99,18.54L4.62,12.81L3,14.07L12,21.07L21,14.07L19.37,12.8L11.99,18.54M12,16L19.36,10.27L21,9L12,2L3,9L4.63,10.27L12,16"
                              Fill="#FFCA28" 
                              Width="18" 
                              Height="18"
                              Margin="0,0,15,0"/>
                              
                        <TextBlock Grid.Column="1" 
                                   Text="The fastest servers" 
                                   Style="{StaticResource FeatureTextStyle}"/>
                    </Grid>
                    
                    <!-- Feature 3 -->
                    <Grid Margin="0,6" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Path Grid.Column="0" 
                              Data="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M12,5A3,3 0 0,1 15,8A3,3 0 0,1 12,11A3,3 0 0,1 9,8A3,3 0 0,1 12,5M17.13,17C15.92,18.85 14.11,20.24 12,20.92C9.89,20.24 8.08,18.85 6.87,17C6.53,16.5 6.24,16 6,15.47C6,13.82 8.71,12.47 12,12.47C15.29,12.47 18,13.79 18,15.47C17.76,16 17.47,16.5 17.13,17Z"
                              Fill="#FFCA28" 
                              Width="18" 
                              Height="18"
                              Margin="0,0,15,0"/>
                              
                        <TextBlock Grid.Column="1" 
                                   Text="Traffic via encrypted tunnel" 
                                   Style="{StaticResource FeatureTextStyle}"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
            
            <!-- Add-on section header -->
            <StackPanel Grid.Row="3" Margin="25,20,25,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Add-on" 
                               FontFamily="{StaticResource WorkSansBold}" 
                               FontSize="18"
                               Foreground="#212121"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                    
                    <Button x:Name="CloseButton"
                            Grid.Column="1"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"/>
                </Grid>
                
                <!-- Dedicated IP option -->
                <Border Style="{StaticResource AddOnCardStyle}" Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                Width="36"
                                Height="36"
                                Background="#F5F5F5"
                                CornerRadius="8"
                                Margin="0,0,15,0">
                            <CheckBox x:Name="DedicatedIpCheck"
                                      IsChecked="False"
                                      Margin="8"
                                      Checked="DedicatedIpCheck_CheckedChanged"
                                      Unchecked="DedicatedIpCheck_CheckedChanged"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Dedicated IP"
                                       FontFamily="{StaticResource WorkSansBold}"
                                       FontSize="16"
                                       Foreground="#212121"/>
                            
                            <TextBlock Text="Premium single IP for all VPN connections"
                                       FontFamily="{StaticResource WorkSansRegular}"
                                       FontSize="14"
                                       Foreground="#757575"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2"
                                   Text="$4.99"
                                   FontFamily="{StaticResource WorkSansBold}"
                                   FontSize="16"
                                   Foreground="#212121"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Summary Section -->
            <StackPanel Grid.Row="4" Margin="25,20,25,0">
                <TextBlock Text="Summary"
                           FontFamily="{StaticResource WorkSansBold}"
                           FontSize="18"
                           Foreground="#212121"
                           Margin="0,0,0,15"/>
                
                <!-- Plan row -->
                <Grid Style="{StaticResource SummaryRowStyle}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="PlanNameText"
                               Grid.Column="0"
                               Text="6 Months"
                               Style="{StaticResource SummaryLabelStyle}"/>
                    
                    <TextBlock x:Name="PlanPriceText"
                               Grid.Column="1"
                               Text="$25.99"
                               Style="{StaticResource SummaryValueStyle}"/>
                </Grid>
                
                <!-- Dedicated IP row (only visible when selected) -->
                <Grid x:Name="DedicatedIPRow" 
                      Style="{StaticResource SummaryRowStyle}"
                      Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Dedicated IP"
                                   Style="{StaticResource SummaryLabelStyle}"/>
                        
                        <Border Background="#F5F5F5"
                                CornerRadius="4"
                                Padding="6,2"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="Add-on"
                                       FontFamily="{StaticResource WorkSansRegular}"
                                       FontSize="12"
                                       Foreground="#757575"/>
                        </Border>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1"
                               Text="+$4.99"
                               Style="{StaticResource SummaryValueStyle}"/>
                </Grid>
                
                <!-- Total row with separator above -->
                <Border BorderBrush="#E0E0E0"
                        BorderThickness="0,1,0,0"
                        Margin="0,10,0,10"/>
                
                <Grid Style="{StaticResource SummaryRowStyle}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Total"
                               FontFamily="{StaticResource WorkSansBold}"
                               FontSize="16"
                               Foreground="#212121"/>
                    
                    <TextBlock x:Name="TotalPriceText"
                               Grid.Column="1"
                               Text="$25.99"
                               FontFamily="{StaticResource WorkSansBold}"
                               FontSize="16"
                               Foreground="#212121"
                               Style="{StaticResource SummaryValueStyle}"/>
                </Grid>
            </StackPanel>
            
            <!-- Pay Button -->
            <Button x:Name="PayButton"
                    Grid.Row="5"
                    Content="Pay"
                    Style="{StaticResource PayButtonStyle}"
                    Margin="0,20,0,30"
                    Click="PayButton_Click"/>
        </Grid>
    </Border>
</Page> 