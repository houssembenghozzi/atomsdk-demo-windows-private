<Window x:Class="Atom.VPN.Demo.SuccessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Success"
        Height="230" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="28">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="16" 
            BorderThickness="0"
            Padding="24,24,24,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Icon/Image -->
                <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="*"/>    <!-- Message -->
                <RowDefinition Height="Auto"/> <!-- Button -->
            </Grid.RowDefinitions>

            <!-- Success Checkmark Icon -->
            <Grid Grid.Row="0" Width="32" Height="32" Margin="0,0,0,10" HorizontalAlignment="Center">
                <Ellipse Width="32" Height="32" Fill="#4CAF50" Opacity="0.1"/>
                <Path Stroke="#4CAF50" StrokeThickness="3" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                    <Path.Data>
                        <PathGeometry>
                            <!-- Checkmark Path -->
                            <PathFigure StartPoint="8,16">
                                <LineSegment Point="14,22"/>
                                <LineSegment Point="24,10"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Grid>
            
            <!-- Title -->
            <TextBlock x:Name="TitleTextBlock" 
                       Grid.Row="1" 
                       Text="Success" 
                       FontWeight="Bold" 
                       FontSize="18" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/> 
            
            <!-- Message -->
            <TextBlock x:Name="MessageTextBlock"
                       Grid.Row="2" 
                       Text="Operation completed successfully." 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="#444444"
                       Margin="0,0,0,20"/>
            
            <!-- OK Button -->
            <Button Grid.Row="3" 
                    Content="OK" 
                    Height="50" 
                    Width="150"
                    Background="#4CAF50" 
                    Foreground="White" 
                    FontWeight="SemiBold"
                    FontSize="16" 
                    BorderThickness="0" 
                    HorizontalAlignment="Center"
                    Click="OkButton_Click"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Border>
</Window> 