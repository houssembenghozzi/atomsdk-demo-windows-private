<Page x:Class="Atom.VPN.Demo.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Background="#FAFAFA">
    <Grid>
        <Image Source="/Resources/icon/bg-light.svg"
               Stretch="UniformToFill"
               Opacity="0.07"
               Panel.ZIndex="0"/>
        <StackPanel Margin="24,40,24,24" VerticalAlignment="Top" Panel.ZIndex="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,32">
                <Button Width="32" Height="32" Background="Transparent" BorderThickness="0" Click="BackButton_Click">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="#323438" Width="24" Height="24"/>
                </Button>
                <TextBlock Text="Edit Profile" FontWeight="Bold" FontSize="20" Foreground="#323438" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <!-- Name -->
            <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                        <Rectangle Width="20" Height="20">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="/Resources/icon/profile.ico"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Viewbox>
                    <TextBox x:Name="NameTextBox"
                             Grid.Column="1"
                             Text=""
                             FontSize="16"
                             Foreground="#212121"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <!-- Country -->
            <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                        <Rectangle Width="20" Height="20">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="/Resources/icon/global.ico"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Viewbox>
                    <Grid Grid.Column="1" VerticalAlignment="Center" Margin="0,0,12,0">
                        <ComboBox x:Name="CountryComboBox" 
                                  FontSize="16" 
                                  Foreground="#212121" 
                                  BorderThickness="0" 
                                  Background="Transparent" 
                                  VerticalAlignment="Center"
                                  SelectionChanged="CountryComboBox_SelectionChanged"
                                  Width="Auto"
                                  HorizontalAlignment="Stretch"
                                  SelectedValuePath="Content"
                                  DisplayMemberPath="Content">
                            <ComboBox.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#F0F0F0"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#212121"/>
                            </ComboBox.Resources>
                        </ComboBox>
                    </Grid>
                </Grid>
            </Border>
            <!-- Email -->
            <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                        <Rectangle Width="20" Height="20">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="/Resources/icon/sms.ico"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Viewbox>
                    <TextBox x:Name="EmailTextBox" Grid.Column="1" Text="" FontSize="16" Foreground="#212121" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <!-- Phone with separated country code -->
            <Border Background="White" CornerRadius="12" Margin="0,0,0,32">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                         <Rectangle Width="20" Height="20">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="/Resources/icon/sms.ico"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Viewbox>
                    <TextBlock x:Name="CountryCodeTextBlock" 
                               Grid.Column="1" 
                               Text="+00" 
                               FontSize="16" 
                               Foreground="#212121" 
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBlock Grid.Column="2" 
                               Text="|" 
                               FontSize="16" 
                               Foreground="#BEBEBE" 
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBox x:Name="PhoneTextBox" 
                             Grid.Column="3" 
                             Text="" 
                             FontSize="16" 
                             Foreground="#212121" 
                             BorderThickness="0" 
                             Background="Transparent" 
                             VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <Button x:Name="SaveButton" Content="Save" Height="56" Background="#212121" Foreground="White" FontWeight="Bold" FontSize="18" BorderThickness="0" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Page> 