<Page x:Class="Atom.VPN.Demo.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FAFAFA">
    <Grid>
        <Image Source="/Resources/icon/bg-light.svg"
               Stretch="UniformToFill"
               Opacity="0.07"
               Panel.ZIndex="0"/>
        <StackPanel Margin="24,40,24,24" VerticalAlignment="Top" Panel.ZIndex="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,32">
                <Button Width="32" Height="32" Background="Transparent" BorderThickness="0" Click="BackButton_Click">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="#323438" Width="24" Height="24"/>
                </Button>
                <TextBlock Text="Edit Profile" FontWeight="Bold" FontSize="20" Foreground="#323438" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                        <Canvas Width="20" Height="20">
                            <Ellipse Width="20" Height="20" Stroke="#212121" StrokeThickness="1.5"/>
                            <Ellipse Width="8" Height="8" Canvas.Left="6" Canvas.Top="4" Stroke="#212121" StrokeThickness="1.5"/>
                        </Canvas>
                    </Viewbox>
                    <TextBox Grid.Column="1" Text="Andrew Ainsley" FontSize="16" Foreground="#212121" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                        <Canvas Width="20" Height="20">
                            <Rectangle Width="20" Height="14" Stroke="#212121" StrokeThickness="1.5"/>
                            <Line X1="2" Y1="2" X2="18" Y2="12" Stroke="#212121" StrokeThickness="1.5"/>
                            <Line X1="18" Y1="2" X2="2" Y2="12" Stroke="#212121" StrokeThickness="1.5"/>
                        </Canvas>
                    </Viewbox>
                    <TextBox Grid.Column="1" Text="andrew_ainsley@yourdomain.com" FontSize="16" Foreground="#212121" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <Border Background="White" CornerRadius="12" Margin="0,0,0,32">
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center">
                        <Canvas Width="20" Height="20">
                            <Ellipse Width="20" Height="20" Stroke="#212121" StrokeThickness="1.5"/>
                        </Canvas>
                    </Viewbox>
                    <ComboBox Grid.Column="1" SelectedIndex="0" FontSize="16" Foreground="#212121" BorderThickness="0" Background="Transparent" VerticalAlignment="Center">
                        <ComboBoxItem Content="United States"/>
                        <ComboBoxItem Content="Canada"/>
                        <ComboBoxItem Content="United Kingdom"/>
                    </ComboBox>
                    <Path Grid.Column="2" Data="M7.25391 5.05911L13.0105 10.8157L7.25391 16.5723" Stroke="#212121" StrokeThickness="1.48026" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Width="12" Height="6" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,16,0"/>
                </Grid>
            </Border>
            <Button Content="Save" Height="56" Background="#212121" Foreground="White" FontWeight="Bold" FontSize="18" BorderThickness="0" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Page> 