<Window x:Class="Atom.VPN.Demo.EmailVerificationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atom.VPN.Demo"
        mc:Ignorable="d"
        Title="Atom VPN - Email Verification" 
        Height="700" 
        Width="460" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        TextOptions.TextFormattingMode="Display"
        UseLayoutRounding="True">
    
    <Window.Resources>
        <!-- Font families -->
        <FontFamily x:Key="WorkSansRegular">/Atom.VPN.Demo;component/Resources/font/WorkSans-Regular.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansBold">/Atom.VPN.Demo;component/Resources/font/WorkSans-Bold.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansMedium">/Atom.VPN.Demo;component/Resources/font/WorkSans-Medium.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="PlusJakartaSans">Segoe UI</FontFamily> <!-- Fallback for Plus Jakarta Sans -->
        
        <!-- OTP Input Box Style -->
        <Style x:Key="OTPDigitBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="64"/>
            <Setter Property="Height" Value="64"/>
            <Setter Property="FontFamily" Value="{StaticResource WorkSansBold}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MaxLength" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                BorderBrush="#BEBEBE" 
                                BorderThickness="1" 
                                CornerRadius="16"
                                Background="Transparent">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0" Focusable="false" 
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#212121"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#212121"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Button styles -->
        <Style x:Key="SubmitButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="#212121" 
                                CornerRadius="30"
                                Height="58">
                            <TextBlock Text="Submit" 
                                       FontFamily="{StaticResource WorkSansBold}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#111111"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Hyperlink Style -->
        <Style x:Key="HyperlinkStyle" TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#333333"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="0" SnapsToDevicePixels="True">
        <!-- Logo -->
        <Grid VerticalAlignment="Top">
            <Image Source="/Resources/Images/fortis_icon.png" Width="52" Height="52" HorizontalAlignment="Left"/>
        </Grid>
        
        <!-- Content -->
        <StackPanel VerticalAlignment="Center" Margin="0,-30,0,0">
            <!-- Title Section -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Email Verification" 
                           FontFamily="{StaticResource WorkSansBold}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#323438" 
                           Margin="0,0,0,8"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
                <TextBlock x:Name="InstructionsText"
                           Text="Please enter the OTP that was sent to your email address &quot;email@email.com&quot;" 
                           FontFamily="{StaticResource WorkSansRegular}" 
                           FontSize="16" 
                           Foreground="#323438"
                           TextWrapping="Wrap"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
            </StackPanel>
            
            <!-- Not your email -->
            <TextBlock Margin="0,0,0,30">
                <Run Text="Not your email? " 
                     FontFamily="{StaticResource PlusJakartaSans}" 
                     FontSize="14" 
                     Foreground="#212121"/>
                <Hyperlink Style="{StaticResource HyperlinkStyle}" 
                           FontFamily="{StaticResource PlusJakartaSans}" 
                           FontWeight="Bold" 
                           Click="ChangeEmail_Click">
                    <Run Text="Change email address"/>
                </Hyperlink>
            </TextBlock>
            
            <!-- OTP Input Section -->
            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="OTPDigit1" 
                         Grid.Column="0" 
                         Style="{StaticResource OTPDigitBoxStyle}"
                         KeyDown="OTPDigit_KeyDown"
                         TextChanged="OTPDigit_TextChanged"
                         PreviewTextInput="OTPDigit_PreviewTextInput"/>
                         
                <TextBox x:Name="OTPDigit2" 
                         Grid.Column="2" 
                         Style="{StaticResource OTPDigitBoxStyle}"
                         KeyDown="OTPDigit_KeyDown"
                         TextChanged="OTPDigit_TextChanged"
                         PreviewTextInput="OTPDigit_PreviewTextInput"/>
                         
                <TextBox x:Name="OTPDigit3" 
                         Grid.Column="4" 
                         Style="{StaticResource OTPDigitBoxStyle}"
                         KeyDown="OTPDigit_KeyDown"
                         TextChanged="OTPDigit_TextChanged"
                         PreviewTextInput="OTPDigit_PreviewTextInput"/>
                         
                <TextBox x:Name="OTPDigit4" 
                         Grid.Column="6" 
                         Style="{StaticResource OTPDigitBoxStyle}"
                         KeyDown="OTPDigit_KeyDown"
                         TextChanged="OTPDigit_TextChanged"
                         PreviewTextInput="OTPDigit_PreviewTextInput"/>
            </Grid>
            
            <!-- Resend OTP Link -->
            <TextBlock HorizontalAlignment="Center" Margin="0,0,0,30">
                <Hyperlink x:Name="ResendLink" 
                           Style="{StaticResource HyperlinkStyle}" 
                           FontFamily="{StaticResource PlusJakartaSans}"
                           FontSize="14"
                           FontWeight="Bold"
                           Click="ResendOTP_Click">
                    <Run Text="Resend OTP"/>
                </Hyperlink>
            </TextBlock>
            
            <!-- Submit Button -->
            <Button Style="{StaticResource SubmitButtonStyle}" 
                    Margin="0,0,0,60"
                    Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Window> 