<Application x:Class="Atom.VPN.Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Atom.VPN.Demo"
             StartupUri="SplashScreen.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Define any global resources here -->
            <BitmapImage x:Key="WorldMapImage" UriSource="/Resources/Images/world_map.png" />
            <BitmapImage x:Key="LogoImage" UriSource="/Resources/Images/logo.png" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
