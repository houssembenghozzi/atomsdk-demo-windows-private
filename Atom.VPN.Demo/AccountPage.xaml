<Page x:Class="Atom.VPN.Demo.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="1000" d:DesignWidth="460"
      Title="AccountPage"
      Background="#FAFAFA">

    <Grid>
        <!-- Background world map image - light version -->
        <Image Source="/Resources/icon/bg-light.svg"
               Stretch="UniformToFill"
               Opacity="0.07"/>

        <Grid Margin="16,40,16,40" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with back button and title -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BackButton"
                        Width="24"
                        Height="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,0,14,0"
                        VerticalAlignment="Center"
                        Click="BackButton_Click">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="#323438"
                          Width="20"
                          Height="20"
                          Stretch="Uniform"/>
                </Button>
                <TextBlock Grid.Column="1"
                           Text="Account"
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="#323438"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Main content -->
            <StackPanel Grid.Row="1" Width="408">
                <!-- Information Section -->
                <TextBlock Text="Information" FontWeight="Bold" FontSize="14" Foreground="#212121" Margin="0,0,0,8"/>
                <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="27" Height="27" Margin="16,0,10,0" VerticalAlignment="Center">
                            <Canvas Width="20" Height="20">
                                <!-- Profile icon -->
                                <Ellipse Width="20" Height="20" Stroke="#212121" StrokeThickness="1.5"/>
                                <Ellipse Width="8" Height="8" Canvas.Left="6" Canvas.Top="4" Stroke="#212121" StrokeThickness="1.5"/>
                            </Canvas>
                        </Border>
                        <TextBlock Grid.Column="1" Text="Edit Profile" FontSize="16" Foreground="#212121" VerticalAlignment="Center"/>
                        <Path Grid.Column="2" Data="M7.25391 5.05911L13.0105 10.8157L7.25391 16.5723" Stroke="#212121" StrokeThickness="1.48026" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Width="12" Height="6" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    </Grid>
                </Border>

                <!-- Security Section -->
                <TextBlock Text="Security" FontWeight="Bold" FontSize="14" Foreground="#212121" Margin="0,0,0,8"/>
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="27" Height="27" Margin="16,0,10,0" VerticalAlignment="Center">
                            <Canvas Width="20" Height="20">
                                <!-- Key icon -->
                                <Path Data="M10,2A8,8 0 1,0 18,10A8,8 0 0,0 10,2ZM10,14A4,4 0 1,1 14,10A4,4 0 0,1 10,14Z" Stroke="#212121" StrokeThickness="1.5" Fill="Transparent"/>
                            </Canvas>
                        </Border>
                        <TextBlock Grid.Column="1" Text="Change Password" FontSize="16" Foreground="#212121" VerticalAlignment="Center"/>
                        <Path Grid.Column="2" Data="M7.25391 5.05911L13.0105 10.8157L7.25391 16.5723" Stroke="#212121" StrokeThickness="1.48026" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Width="12" Height="6" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    </Grid>
                </Border>
                <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="27" Height="27" Margin="16,0,10,0" VerticalAlignment="Center">
                            <Canvas Width="20" Height="20">
                                <!-- Sessions icon -->
                                <Ellipse Width="20" Height="20" Stroke="#212121" StrokeThickness="1.5"/>
                                <Ellipse Width="8" Height="8" Canvas.Left="6" Canvas.Top="4" Stroke="#212121" StrokeThickness="1.5"/>
                            </Canvas>
                        </Border>
                        <TextBlock Grid.Column="1" Text="Manage Active Sessions" FontSize="16" Foreground="#212121" VerticalAlignment="Center"/>
                        <Path Grid.Column="2" Data="M7.25391 5.05911L13.0105 10.8157L7.25391 16.5723" Stroke="#212121" StrokeThickness="1.48026" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Width="12" Height="6" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    </Grid>
                </Border>

                <!-- Billing Section -->
                <TextBlock Text="Billing" FontWeight="Bold" FontSize="14" Foreground="#212121" Margin="0,0,0,8"/>
                <Border Background="White" CornerRadius="12" Margin="0,0,0,8">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="27" Height="27" Margin="16,0,10,0" VerticalAlignment="Center">
                            <Canvas Width="20" Height="20">
                                <!-- Crown icon -->
                                <Path Data="M2,16 L10,4 L18,16 Z" Stroke="#212121" StrokeThickness="1.5" Fill="Transparent"/>
                            </Canvas>
                        </Border>
                        <TextBlock Grid.Column="1" Text="Active subscription" FontSize="16" Foreground="#212121" VerticalAlignment="Center"/>
                        <Path Grid.Column="2" Data="M7.25391 5.05911L13.0105 10.8157L7.25391 16.5723" Stroke="#212121" StrokeThickness="1.48026" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Width="12" Height="6" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    </Grid>
                </Border>
                <Border Background="White" CornerRadius="12" Margin="0,0,0,16">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="27" Height="27" Margin="16,0,10,0" VerticalAlignment="Center">
                            <Canvas Width="20" Height="20">
                                <!-- Card icon -->
                                <Rectangle Width="20" Height="14" Stroke="#212121" StrokeThickness="1.5"/>
                                <Rectangle Width="8" Height="2" Canvas.Left="6" Canvas.Top="10" Stroke="#212121" StrokeThickness="1.5"/>
                            </Canvas>
                        </Border>
                        <TextBlock Grid.Column="1" Text="Payment method" FontSize="16" Foreground="#212121" VerticalAlignment="Center"/>
                        <Path Grid.Column="2" Data="M7.25391 5.05911L13.0105 10.8157L7.25391 16.5723" Stroke="#212121" StrokeThickness="1.48026" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Width="12" Height="6" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    </Grid>
                </Border>

                <!-- User Data Section -->
                <TextBlock Text="User Data" FontWeight="Bold" FontSize="14" Foreground="#212121" Margin="0,0,0,8"/>
                <Border Background="White" CornerRadius="12" Margin="0,0,0,0">
                    <Grid Height="56">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="27" Height="27" Margin="16,0,10,0" VerticalAlignment="Center">
                            <Canvas Width="20" Height="20">
                                <!-- Trash icon -->
                                <Rectangle Width="14" Height="16" Canvas.Left="3" Canvas.Top="2" Stroke="#F75555" StrokeThickness="1.5"/>
                                <Rectangle Width="8" Height="2" Canvas.Left="6" Canvas.Top="4" Stroke="#F75555" StrokeThickness="1.5"/>
                            </Canvas>
                        </Border>
                        <TextBlock Grid.Column="1" Text="Delete Account" FontSize="16" Foreground="#F75555" VerticalAlignment="Center"/>
                        <Path Grid.Column="2" Data="M7.25391 5.05911L13.0105 10.8157L7.25391 16.5723" Stroke="#F75555" StrokeThickness="1.48026" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Width="12" Height="6" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page> 