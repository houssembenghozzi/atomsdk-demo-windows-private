        <!-- Text box styles -->
        <Style x:Key="EmailTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                BorderBrush="#BEBEBE" 
                                BorderThickness="1" 
                                CornerRadius="30"
                                Background="Transparent"
                                Padding="16,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Path x:Name="EmailIcon" Grid.Column="0" Width="20" Height="16" Stretch="Uniform" Margin="0,4,0,4">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="19,5">
                                                <LineSegment Point="5,5" />
                                                <ArcSegment Point="3,7" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="3,17" />
                                                <ArcSegment Point="5,19" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="19,19" />
                                                <ArcSegment Point="21,17" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="21,7" />
                                                <ArcSegment Point="19,5" Size="2,2" SweepDirection="Clockwise" />
