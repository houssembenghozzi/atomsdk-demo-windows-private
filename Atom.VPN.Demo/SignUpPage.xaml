    </Page.Resources>
    
    <Grid Margin="0" SnapsToDevicePixels="True">
        <!-- Logo -->
        <Grid VerticalAlignment="Top" Margin="30,20,0,0">
            <Image Source="/Resources/Images/fortis_icon.png" Width="52" Height="52" HorizontalAlignment="Left"/>
        </Grid>
        
        <!-- Content -->
        <StackPanel VerticalAlignment="Center" Margin="30,-30,30,0">
            <!-- Title Section -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Create New Account" 
                           FontFamily="{StaticResource WorkSansBold}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#323438" 
                           Margin="0,0,0,8"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
                <TextBlock Text="Please enter your details." 
                           FontFamily="{StaticResource WorkSansRegular}" 
                           FontSize="16" 
                           Foreground="#323438"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
            </StackPanel>
            
            <!-- Form Section -->
            <StackPanel Margin="0,0,0,20">
                <!-- Email Input -->
                <TextBox x:Name="EmailTextBox" 
                         Style="{StaticResource EmailTextBoxStyle}" 
                         Margin="0,0,0,20"
                         GotFocus="InputField_GotFocus"
                         LostFocus="InputField_LostFocus"/>
                
                <!-- Username Input (max 8 characters) -->
                <Border x:Name="UsernameBorder"
                       BorderBrush="#BEBEBE" 
                       BorderThickness="1" 
                       CornerRadius="30"
                       Background="Transparent"
                       Padding="16,16"
                       Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Path x:Name="UsernameIcon" 
                              Grid.Column="0" 
                              Width="20" 
                              Height="20" 
                              Stretch="Uniform" 
                              Margin="0,0,0,0" 
                              StrokeThickness="1.5" 
                              Stroke="#BEBEBE" 
                              StrokeLineJoin="Round" 
                              StrokeStartLineCap="Round" 
                              StrokeEndLineCap="Round">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure StartPoint="16,21">
                                        <LineSegment Point="16,19" />
                                        <ArcSegment Point="8,19" Size="8,8" SweepDirection="Clockwise" IsLargeArc="True"/>
                                        <LineSegment Point="8,21" />
                                    </PathFigure>
                                    <PathFigure StartPoint="12,11">
                                        <ArcSegment Point="12,11" Size="4,4" SweepDirection="Clockwise" IsLargeArc="True"/>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        
                        <TextBox x:Name="UsernameTextBox" 
                                 Grid.Column="2" 
                                 FontFamily="{StaticResource WorkSansRegular}" 
                                 FontSize="16" 
                                 Foreground="#323438" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 MaxLength="8"
                                 GotFocus="InputField_GotFocus"
                                 LostFocus="InputField_LostFocus"/>
                        
                        <TextBlock Grid.Column="2" 
                                   x:Name="UsernameTextBoxPlaceholder" 
                                   Text="Username (max 8 characters)" 
                                   Foreground="#BEBEBE" 
                                   FontFamily="{StaticResource WorkSansRegular}" 
                                   FontSize="16"/>
                    </Grid>
                </Border>
                
                <!-- Password Section -->
                <Grid Margin="0,0,0,20">
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource PasswordBoxStyle}" 
                                 Margin="0,0,0,0"
                                 GotFocus="InputField_GotFocus"
                                 LostFocus="InputField_LostFocus"/>
                    <TextBox x:Name="PasswordTextBox"
                             Style="{StaticResource TextBoxStyleForPasswordDisplay}"
                             Margin="0,0,0,0"
                             GotFocus="InputField_GotFocus"
                             LostFocus="InputField_LostFocus"/>
                </Grid>
                
                <!-- Password Validation messages (Add after the Password and before the Confirm Password fields) -->
                <StackPanel x:Name="PasswordValidationMessages" Margin="0,5,0,16">
                    <TextBlock x:Name="LengthValidationText" Text="● Must be 12-32 characters long" Foreground="#757575" FontSize="12" VerticalAlignment="Center" Margin="0,2,0,2"/>
                    <TextBlock x:Name="UppercaseValidationText" Text="● Must contain at least one uppercase letter" Foreground="#757575" FontSize="12" VerticalAlignment="Center" Margin="0,2,0,2"/>
                    <TextBlock x:Name="LowercaseValidationText" Text="● Must contain at least one lowercase letter" Foreground="#757575" FontSize="12" VerticalAlignment="Center" Margin="0,2,0,2"/>
                    <TextBlock x:Name="NumberValidationText" Text="● Must contain at least one number" Foreground="#757575" FontSize="12" VerticalAlignment="Center" Margin="0,2,0,2"/>
                    <TextBlock x:Name="SpecialCharValidationText" Text="● Must contain at least one special character (!@#$%^&amp;*,.:{}/)" Foreground="#757575" FontSize="12" VerticalAlignment="Center" Margin="0,2,0,2"/>
                    <TextBlock x:Name="AsciiValidationText" Text="● Must contain only ASCII characters" Foreground="#757575" FontSize="12" VerticalAlignment="Center" Margin="0,2,0,2"/>
                </StackPanel>
                
                <!-- Confirm Password Section -->
                <Grid Margin="0,0,0,5">
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Style="{StaticResource ConfirmPasswordBoxStyle}" 
                                 Margin="0,0,0,0"
                                 GotFocus="InputField_GotFocus"
                                 LostFocus="InputField_LostFocus"/>
                    <TextBox x:Name="ConfirmPasswordTextBox"
                             Style="{StaticResource ConfirmPasswordTextBoxStyle}"
                             Margin="0,0,0,0"
                             GotFocus="InputField_GotFocus"
                             LostFocus="InputField_LostFocus"/>
                </Grid>
                
                <!-- Password Match Status -->
                <TextBlock x:Name="PasswordMatchStatus" 
                           Text="Passwords match" 
                           Foreground="Green" 
                           FontSize="12" 
                           Margin="16,0,0,15"
                           Visibility="Collapsed"/>
                
                <!-- Success Message (initially hidden) -->
                <TextBlock x:Name="SuccessMessage"
                           Foreground="#4CAF50"
                           FontSize="14"
                           FontFamily="{StaticResource WorkSansRegular}"
                           TextWrapping="Wrap"
                           Margin="16,0,16,20"
                           Visibility="Collapsed"/>
                
                <!-- Terms Checkbox -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border x:Name="TermsCheckboxBorder" BorderBrush="#BEBEBE" BorderThickness="1" CornerRadius="4" Width="24" Height="24" Margin="0,0,10,0">
                        <CheckBox x:Name="TermsCheckbox" Style="{StaticResource TermsCheckboxStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2"/>
                    </Border>
                    
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="14">
                        <Run Text="Agree to "/>
                        <Hyperlink Foreground="#DC1E3D" Click="TermsAndConditions_Click">
                            <Run Text="Terms &amp; Conditions"/>
                        </Hyperlink>
                        <Run Text=" and "/>
                        <Hyperlink Foreground="#DC1E3D" Click="PrivacyPolicy_Click">
                            <Run Text="Privacy Policy"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </StackPanel>
            
            <!-- Sign Up Button -->
            <Button x:Name="SignUpButton" 
                    Style="{StaticResource SignUpButtonStyle}" 
                    Margin="0,0,0,60"
                    Click="SignUp_Click"/>
        </StackPanel>
        
        <!-- Sign In Link (at bottom) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30">
            <TextBlock Text="Already have an account? " 
                       FontFamily="{StaticResource PlusJakartaSans}" 
                       FontSize="14" 
                       Foreground="#212121" 
                       VerticalAlignment="Center" 
                       Margin="0,0,4,0"/>
            <Button Style="{StaticResource SignInButtonStyle}" 
                    VerticalAlignment="Center"
                    Click="SignIn_Click"/>
        </StackPanel>
    </Grid>
</Page> 