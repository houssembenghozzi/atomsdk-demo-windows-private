<Window x:Class="Atom.VPN.Demo.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atom.VPN.Demo"
        xmlns:shapes="clr-namespace:System.Windows.Shapes;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Atom VPN - Login" 
        Height="700" 
        Width="460" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#FAFAFA"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">
    
    <Window.Resources>
        <!-- Font families -->
        <FontFamily x:Key="GTWalsheimPro">/Atom.VPN.Demo;component/Resources/font/GT-Walsheim-Regular-Trial-BF651b7fc71a47d.otf#GT Walsheim Pro</FontFamily>
        <FontFamily x:Key="GTWalsheimProBold">/Atom.VPN.Demo;component/Resources/font/GT-Walsheim-Bold-Trial-BF651b7fc737c57.otf#GT Walsheim Pro</FontFamily>
        <FontFamily x:Key="GTWalsheimProMedium">/Atom.VPN.Demo;component/Resources/font/GT-Walsheim-Medium-Trial-BF651b7fc728fb3.otf#GT Walsheim Pro</FontFamily>
        <FontFamily x:Key="PlusJakartaSans">Segoe UI</FontFamily> <!-- Fallback for Plus Jakarta Sans -->
        
        <!-- Email icon path data -->
        <PathGeometry x:Key="EmailIconPath">M3 8L10.89 13.26C11.2187 13.4793 11.6049 13.5963 12 13.5963C12.3951 13.5963 12.7813 13.4793 13.11 13.26L21 8M5 19H19C19.5304 19 20.0391 18.7893 20.4142 18.4142C20.7893 18.0391 21 17.5304 21 17V7C21 6.46957 20.7893 5.96086 20.4142 5.58579C20.0391 5.21071 19.5304 5 19 5H5C4.46957 5 3.96086 5.21071 3.58579 5.58579C3.21071 5.96086 3 6.46957 3 7V17C3 17.5304 3.21071 18.0391 3.58579 18.4142C3.96086 18.7893 4.46957 19 5 19Z</PathGeometry>
        
        <!-- Lock icon path data -->
        <PathGeometry x:Key="LockIconPath">M17 11H7C5.89543 11 5 11.8954 5 13V19C5 20.1046 5.89543 21 7 21H17C18.1046 21 19 20.1046 19 19V13C19 11.8954 18.1046 11 17 11Z M12 17C11.4477 17 11 16.5523 11 16C11 15.4477 11.4477 15 12 15C12.5523 15 13 15.4477 13 16C13 16.5523 12.5523 17 12 17Z M9 11V7C9 5.34315 10.3431 4 12 4C13.6569 4 15 5.34315 15 7V11</PathGeometry>
        
        <!-- Eye icon path data -->
        <PathGeometry x:Key="EyeIconPath">M12 4C5 4 1 12 1 12C1 12 5 20 12 20C19 20 23 12 23 12C23 12 19 4 12 4Z M12 15C10.3431 15 9 13.6569 9 12C9 10.3431 10.3431 9 12 9C13.6569 9 15 10.3431 15 12C15 13.6569 13.6569 15 12 15Z</PathGeometry>
        
        <!-- Text box styles -->
        <Style x:Key="EmailTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                BorderBrush="#BEBEBE" 
                                BorderThickness="1" 
                                CornerRadius="30"
                                Background="Transparent"
                                Padding="16,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Mail Icon -->
                                <Path Data="{StaticResource EmailIconPath}" 
                                     Fill="Transparent"
                                     Stroke="#111827"
                                     StrokeThickness="1.5"
                                     Stretch="Uniform"
                                     Width="24" 
                                     Height="24" />
                                
                                <ScrollViewer Grid.Column="2" x:Name="PART_ContentHost" Focusable="false" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                           x:Name="PlaceholderText" 
                                           Text="email@email.com" 
                                           Foreground="#BEBEBE" 
                                           FontFamily="{StaticResource GTWalsheimPro}" 
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#212121"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value="{x:Null}"/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsFocused" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="{StaticResource GTWalsheimPro}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#323438"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" 
                                BorderBrush="#BEBEBE" 
                                BorderThickness="1" 
                                CornerRadius="30"
                                Background="Transparent"
                                Padding="16,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="24"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Lock Icon -->
                                <Path Data="{StaticResource LockIconPath}" 
                                     Fill="Transparent"
                                     Stroke="#BEBEBE"
                                     StrokeThickness="1.5"
                                     Stretch="Uniform"
                                     Width="24" 
                                     Height="24" />
                                
                                <ScrollViewer Grid.Column="2" x:Name="PART_ContentHost" Focusable="false" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                           x:Name="PlaceholderText" 
                                           Text="Password" 
                                           Foreground="#BEBEBE" 
                                           FontFamily="{StaticResource GTWalsheimProMedium}" 
                                           FontSize="14"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                                
                                <!-- Eye Icon Button for password visibility -->
                                <Button x:Name="PART_TogglePasswordButton" 
                                        Grid.Column="3" 
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Show/Hide Password">
                                    <Path x:Name="EyeIcon"
                                          Data="{StaticResource EyeIconPath}" 
                                          Fill="Transparent"
                                          Stroke="#BEBEBE"
                                          StrokeThickness="1.5"
                                          Stretch="Uniform"
                                          Width="24" 
                                          Height="24" />
                                </Button>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#212121"/>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Password" Value="">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Password" Value=""/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Password" Value=""/>
                                    <Condition Property="IsFocused" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="{StaticResource GTWalsheimProMedium}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#323438"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Button styles -->
        <Style x:Key="SignInButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="#212121" 
                                CornerRadius="29"
                                Height="58">
                            <TextBlock Text="Sign in" 
                                       FontFamily="{StaticResource GTWalsheimProBold}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#111111"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SignUpButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="Sign up" 
                                   FontFamily="{StaticResource PlusJakartaSans}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#212121"
                                   TextOptions.TextFormattingMode="Display"/>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style x:Key="ForgotPasswordButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="Forgot Password?" 
                                   FontFamily="{StaticResource PlusJakartaSans}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#464646"
                                   TextOptions.TextFormattingMode="Display"/>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <!-- Logo -->
        <Grid VerticalAlignment="Top">
            <Image Source="/Resources/Images/fortis_icon.png" Width="42" Height="42" HorizontalAlignment="Left"/>
        </Grid>
        
        <!-- Content -->
        <StackPanel VerticalAlignment="Center" Margin="0,-40,0,0">
            <!-- Title Section -->
            <StackPanel Margin="0,0,0,40">
                <TextBlock Text="Login" 
                           FontFamily="{StaticResource GTWalsheimProBold}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#323438" 
                           Margin="0,0,0,8"
                           TextOptions.TextFormattingMode="Display"/>
                <TextBlock Text="Please enter your details." 
                           FontFamily="{StaticResource GTWalsheimPro}" 
                           FontSize="16" 
                           Foreground="#323438"
                           TextOptions.TextFormattingMode="Display"/>
            </StackPanel>
            
            <!-- Form Section -->
            <StackPanel Margin="0,0,0,20">
                <!-- Email Input -->
                <TextBox x:Name="EmailTextBox" 
                         Style="{StaticResource EmailTextBoxStyle}" 
                         Margin="0,0,0,20" 
                         GotFocus="InputField_GotFocus"
                         LostFocus="InputField_LostFocus"/>
                
                <!-- Password Section -->
                <StackPanel>
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource PasswordBoxStyle}" 
                                 Margin="0,0,0,14"
                                 GotFocus="InputField_GotFocus"
                                 LostFocus="InputField_LostFocus"
                                 Loaded="PasswordBox_Loaded"/>
                    <Button Style="{StaticResource ForgotPasswordButtonStyle}" 
                            HorizontalAlignment="Right" 
                            Margin="0,0,0,30"
                            Click="ForgotPassword_Click"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Sign In Button -->
            <Button Style="{StaticResource SignInButtonStyle}" 
                    Margin="0,0,0,30"
                    Click="SignIn_Click"/>
            
            <!-- Sign Up Link -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Don't have an account?" 
                           FontFamily="{StaticResource PlusJakartaSans}" 
                           FontSize="14" 
                           Foreground="#212121" 
                           VerticalAlignment="Center" 
                           Margin="0,0,4,0"
                           TextOptions.TextFormattingMode="Display"/>
                <Button Style="{StaticResource SignUpButtonStyle}" 
                        VerticalAlignment="Center"
                        Click="SignUp_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window> 