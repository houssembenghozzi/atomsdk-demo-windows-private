<Page x:Class="Atom.VPN.Demo.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Atom.VPN.Demo"
      mc:Ignorable="d"
      Title="Login"
      d:DesignHeight="700" 
      d:DesignWidth="460"
      Background="#FAFAFA"
      TextOptions.TextFormattingMode="Display"
      UseLayoutRounding="True">

    <Page.Resources>
        <!-- Font families -->
        <FontFamily x:Key="WorkSansRegular">/Atom.VPN.Demo;component/Resources/font/WorkSans-Regular.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansBold">/Atom.VPN.Demo;component/Resources/font/WorkSans-Bold.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="WorkSansMedium">/Atom.VPN.Demo;component/Resources/font/WorkSans-Medium.ttf#Work Sans</FontFamily>
        <FontFamily x:Key="PlusJakartaSans">Segoe UI</FontFamily> <!-- Fallback for Plus Jakarta Sans -->
        
        <!-- Text box styles -->
        <Style x:Key="EmailTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                BorderBrush="#BEBEBE" 
                                BorderThickness="1" 
                                CornerRadius="30"
                                Background="Transparent"
                                Padding="16,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Path x:Name="EmailIcon" Grid.Column="0" Width="20" Height="16" Stretch="Uniform" Margin="0,4,0,4">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="17,1">
                                                <LineSegment Point="3,1" />
                                                <ArcSegment Point="1,3" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="1,13" />
                                                <ArcSegment Point="3,15" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="17,15" />
                                                <ArcSegment Point="19,13" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="19,3" />
                                                <ArcSegment Point="17,1" Size="2,2" SweepDirection="Clockwise" />
                                            </PathFigure>
                                            <PathFigure StartPoint="1,3">
                                                <LineSegment Point="10,9" />
                                                <LineSegment Point="19,3" />
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                    <Path.Stroke>
                                        <SolidColorBrush x:Name="EmailIconColor" Color="#BEBEBE" />
                                    </Path.Stroke>
                                    <Path.StrokeThickness>1.5</Path.StrokeThickness>
                                    <Path.StrokeLineJoin>Round</Path.StrokeLineJoin>
                                    <Path.StrokeStartLineCap>Round</Path.StrokeStartLineCap>
                                    <Path.StrokeEndLineCap>Round</Path.StrokeEndLineCap>
                                </Path>
                                <ScrollViewer Grid.Column="2" x:Name="PART_ContentHost" Focusable="false"/>
                                <TextBlock Grid.Column="2" 
                                           x:Name="Placeholder" 
                                           Text="email@email.com" 
                                           Foreground="#BEBEBE" 
                                           FontFamily="{StaticResource WorkSansRegular}" 
                                           FontSize="16"/>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#212121"/>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="EmailIcon" Property="Stroke" Value="#111827"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="False">
                                <Setter TargetName="EmailIcon" Property="Stroke" Value="#BEBEBE"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsFocused" Value="True"/>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="{StaticResource WorkSansRegular}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#323438"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
        
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" 
                                BorderBrush="#BEBEBE" 
                                BorderThickness="1" 
                                CornerRadius="30"
                                Background="Transparent"
                                Padding="16,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="24"/>
                                </Grid.ColumnDefinitions>
                                
                                <Path x:Name="PasswordIcon" Grid.Column="0" Width="16" Height="21" Stretch="Uniform" Margin="0,1.5,0,1.5">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="13,9.5">
                                                <LineSegment Point="3,9.5" />
                                                <ArcSegment Point="1,11.5" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="1,17.5" />
                                                <ArcSegment Point="3,19.5" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="13,19.5" />
                                                <ArcSegment Point="15,17.5" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="15,11.5" />
                                                <ArcSegment Point="13,9.5" Size="2,2" SweepDirection="Clockwise" />
                                            </PathFigure>
                                            <PathFigure StartPoint="8,15.5">
                                                <ArcSegment Point="8,13.5" Size="1,1" SweepDirection="Counterclockwise" />
                                                <ArcSegment Point="8,15.5" Size="1,1" SweepDirection="Counterclockwise" />
                                            </PathFigure>
                                            <PathFigure StartPoint="4,9.5">
                                                <LineSegment Point="4,5.5" />
                                                <ArcSegment Point="8,1.5" Size="4,4" SweepDirection="Clockwise" />
                                                <ArcSegment Point="12,5.5" Size="4,4" SweepDirection="Clockwise" />
                                                <LineSegment Point="12,9.5" />
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                    <Path.Stroke>
                                        <SolidColorBrush x:Name="PasswordIconColor" Color="#BEBEBE" />
                                    </Path.Stroke>
                                    <Path.StrokeThickness>1.5</Path.StrokeThickness>
                                    <Path.StrokeLineJoin>Round</Path.StrokeLineJoin>
                                    <Path.StrokeStartLineCap>Round</Path.StrokeStartLineCap>
                                    <Path.StrokeEndLineCap>Round</Path.StrokeEndLineCap>
                                </Path>
                                <ScrollViewer Grid.Column="2" x:Name="PART_ContentHost" Focusable="false"/>
                                <TextBlock Grid.Column="2" 
                                           x:Name="Placeholder" 
                                           Text="Password" 
                                           Foreground="#BEBEBE" 
                                           FontFamily="{StaticResource WorkSansMedium}" 
                                           FontSize="14"
                                           FontWeight="Medium"/>
                                <Button Grid.Column="3" x:Name="ShowPasswordButton" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Image Source="/Resources/icon/eye.svg" Width="24" Height="24" Opacity="0.7"/>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#212121"/>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="PasswordIcon" Property="Stroke" Value="#111827"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="False">
                                <Setter TargetName="PasswordIcon" Property="Stroke" Value="#BEBEBE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="{StaticResource WorkSansMedium}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#323438"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
        
        <Style x:Key="TextBoxStyleForPasswordDisplay" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                BorderBrush="#BEBEBE" 
                                BorderThickness="1" 
                                CornerRadius="30"
                                Background="Transparent"
                                Padding="16,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="24"/>
                                </Grid.ColumnDefinitions>
                                
                                <Path x:Name="PasswordIconForText" Grid.Column="0" Width="16" Height="21" Stretch="Uniform" Margin="0,1.5,0,1.5">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="13,9.5">
                                                <LineSegment Point="3,9.5" />
                                                <ArcSegment Point="1,11.5" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="1,17.5" />
                                                <ArcSegment Point="3,19.5" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="13,19.5" />
                                                <ArcSegment Point="15,17.5" Size="2,2" SweepDirection="Clockwise" />
                                                <LineSegment Point="15,11.5" />
                                                <ArcSegment Point="13,9.5" Size="2,2" SweepDirection="Clockwise" />
                                            </PathFigure>
                                            <PathFigure StartPoint="8,15.5">
                                                <ArcSegment Point="8,13.5" Size="1,1" SweepDirection="Counterclockwise" />
                                                <ArcSegment Point="8,15.5" Size="1,1" SweepDirection="Counterclockwise" />
                                            </PathFigure>
                                            <PathFigure StartPoint="4,9.5">
                                                <LineSegment Point="4,5.5" />
                                                <ArcSegment Point="8,1.5" Size="4,4" SweepDirection="Clockwise" />
                                                <ArcSegment Point="12,5.5" Size="4,4" SweepDirection="Clockwise" />
                                                <LineSegment Point="12,9.5" />
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                    <Path.Stroke>
                                        <SolidColorBrush x:Name="PasswordIconForTextColor" Color="#BEBEBE" />
                                    </Path.Stroke>
                                    <Path.StrokeThickness>1.5</Path.StrokeThickness>
                                    <Path.StrokeLineJoin>Round</Path.StrokeLineJoin>
                                    <Path.StrokeStartLineCap>Round</Path.StrokeStartLineCap>
                                    <Path.StrokeEndLineCap>Round</Path.StrokeEndLineCap>
                                </Path>
                                <ScrollViewer Grid.Column="2" x:Name="PART_ContentHost" Focusable="false"/>
                                <TextBlock Grid.Column="2" 
                                           x:Name="Placeholder" 
                                           Text="Password" 
                                           Foreground="#BEBEBE" 
                                           FontFamily="{StaticResource WorkSansMedium}" 
                                           FontSize="14"
                                           FontWeight="Medium"/>
                                <Button Grid.Column="3" x:Name="HidePasswordButton" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Image Source="/Resources/Images/eye-slash_icon.svg" Width="24" Height="24" Opacity="0.7"/>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#212121"/>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="PasswordIconForText" Property="Stroke" Value="#111827"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="False">
                                <Setter TargetName="PasswordIconForText" Property="Stroke" Value="#BEBEBE"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsFocused" Value="True"/>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="{StaticResource WorkSansMedium}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#323438"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
        
        <!-- Button styles -->
        <Style x:Key="SignInButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="#212121" 
                                CornerRadius="30"
                                Height="58">
                            <TextBlock Text="Sign in" 
                                       FontFamily="{StaticResource WorkSansBold}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#111111"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="SignUpButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="Sign up" 
                                   FontFamily="{StaticResource PlusJakartaSans}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#212121"/>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="ForgotPasswordButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="Forgot Password?" 
                                   FontFamily="{StaticResource PlusJakartaSans}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#464646"/>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>
    
    <Grid Margin="0" SnapsToDevicePixels="True">
        <!-- Logo -->
        <Grid VerticalAlignment="Top" Margin="30,20,0,0">
            <Image Source="/Resources/Images/fortis_icon.png" Width="52" Height="52" HorizontalAlignment="Left"/>
        </Grid>
        
        <!-- Content -->
        <StackPanel VerticalAlignment="Center" Margin="30,-30,30,0">
            <!-- Title Section -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Login" 
                           FontFamily="{StaticResource WorkSansBold}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#323438" 
                           Margin="0,0,0,8"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
                <TextBlock Text="Please enter your details." 
                           FontFamily="{StaticResource WorkSansRegular}" 
                           FontSize="16" 
                           Foreground="#323438"
                           TextOptions.TextFormattingMode="Display"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
            </StackPanel>
            
            <!-- Form Section -->
            <StackPanel Margin="0,0,0,20">
                <!-- Email Input -->
                <TextBox x:Name="EmailTextBox" 
                         Style="{StaticResource EmailTextBoxStyle}" 
                         Margin="0,0,0,20"/>
                
                <!-- Password Section -->
                <Grid>
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource PasswordBoxStyle}" 
                                 Margin="0,0,0,14"/>
                    <TextBox x:Name="PasswordTextBox"
                             Style="{StaticResource TextBoxStyleForPasswordDisplay}"
                             Margin="0,0,0,14"/>
                </Grid>
                
                <Button Style="{StaticResource ForgotPasswordButtonStyle}" 
                        HorizontalAlignment="Right" 
                        Margin="0,0,0,30"
                        Click="ForgotPassword_Click"/>
            </StackPanel>
            
            <!-- Checkbox for Terms -->
            <!--
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <CheckBox x:Name="TermsCheckbox" VerticalAlignment="Center" Margin="0,0,10,0"/>
                
                <TextBlock Grid.Column="1" VerticalAlignment="Center" TextWrapping="Wrap">
                    <Run Text="Agree to "/>
                    <Hyperlink Foreground="#DC1E3D">
                        <Run Text="Terms &amp; Conditions"/>
                    </Hyperlink>
                    <Run Text=" and "/>
                    <Hyperlink Foreground="#DC1E3D">
                        <Run Text="Privacy Policy"/>
                    </Hyperlink>
                </TextBlock>
            </Grid>
            -->
            
            <!-- Sign In Button -->
            <Button Style="{StaticResource SignInButtonStyle}" 
                    Margin="0,0,0,60"
                    Click="SignIn_Click"/>
        </StackPanel>
        
        <!-- Sign Up Link (at bottom) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30">
            <TextBlock Text="Don't have an account? " 
                       FontFamily="{StaticResource PlusJakartaSans}" 
                       FontSize="14" 
                       Foreground="#212121" 
                       VerticalAlignment="Center" 
                       Margin="0,0,4,0"/>
            <Button Style="{StaticResource SignUpButtonStyle}" 
                    VerticalAlignment="Center"
                    Click="SignUp_Click"/>
        </StackPanel>
    </Grid>
</Page> 