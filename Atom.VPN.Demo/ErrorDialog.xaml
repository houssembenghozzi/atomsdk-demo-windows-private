<Window x:Class="Atom.VPN.Demo.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error"
        Height="230" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="28">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="16" 
            BorderThickness="0"
            Padding="24,24,24,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Icon/Image (Optional) -->
                <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="*"/>    <!-- Message -->
                <RowDefinition Height="Auto"/> <!-- Button -->
            </Grid.RowDefinitions>

            <!-- Optional: Error Icon -->
            <Path Grid.Row="0" Width="32" Height="32" Stretch="Uniform" Fill="#E94057" Margin="0,0,0,10" HorizontalAlignment="Center">
                <Path.Data>
                    <PathGeometry>
                        <!-- Simple X Mark Path -->
                        <PathFigure StartPoint="5,5">
                            <LineSegment Point="27,27"/>
                        </PathFigure>
                        <PathFigure StartPoint="27,5">
                            <LineSegment Point="5,27"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
                 <Path.Stroke>
                    <SolidColorBrush Color="#E94057" />
                </Path.Stroke>
                <Path.StrokeThickness>3</Path.StrokeThickness>
            </Path>
            
            <!-- Title -->
            <TextBlock x:Name="TitleTextBlock" 
                       Grid.Row="1" 
                       Text="Error" 
                       FontWeight="Bold" 
                       FontSize="18" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/> 
            
            <!-- Message -->
            <TextBlock x:Name="MessageTextBlock"
                       Grid.Row="2" 
                       Text="An unexpected error occurred." 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="#444444"
                       Margin="0,0,0,20"/>
            
            <!-- OK Button -->
            <Button Grid.Row="3" 
                    Content="OK" 
                    Height="50" 
                    Width="150"
                    Background="#E94057" 
                    Foreground="White" 
                    FontWeight="SemiBold"
                    FontSize="16" 
                    BorderThickness="0" 
                    HorizontalAlignment="Center"
                    Click="OkButton_Click"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Border>
</Window> 