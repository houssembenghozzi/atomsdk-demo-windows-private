<Window x:Class="Atom.VPN.Demo.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atom.VPN.Demo"
        mc:Ignorable="d"
        Title="Atom VPN" 
        Height="700" 
        Width="460" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Grid>
        <Border CornerRadius="20" Background="#000000">
            <Grid>
                <!-- World Map Background with Gradient Overlay -->
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Image Stretch="UniformToFill" Opacity="0.3">
                        <Image.Source>
                            <BitmapImage UriSource="pack://application:,,,/Atom.VPN.Demo;component/Resources/Images/world_map.png" />
                        </Image.Source>
                        <Image.Effect>
                            <BlurEffect Radius="1"/>
                        </Image.Effect>
                    </Image>
                    <Rectangle>
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#00000000" Offset="0"/>
                                <GradientStop Color="#FF000000" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
                
                <!-- Logo -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,100">
                    <Image x:Name="LogoImage" Width="200" Height="200">
                        <Image.Source>
                            <BitmapImage UriSource="pack://application:,,,/Atom.VPN.Demo;component/Resources/Images/fortis_logo.png" />
                        </Image.Source>
                    </Image>
                </StackPanel>
                
                <!-- Loading Animation -->
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,200,0,0">
                    <Ellipse Width="80" Height="80" Stroke="#3A3A3A" StrokeThickness="8" Opacity="0.4"/>
                    <Ellipse Width="80" Height="80" Stroke="White" StrokeThickness="8">
                        <Ellipse.Clip>
                            <PathGeometry>
                                <PathFigure StartPoint="40,0">
                                    <ArcSegment Size="40,40" IsLargeArc="True" SweepDirection="Clockwise" Point="40,80"/>
                                </PathFigure>
                            </PathGeometry>
                        </Ellipse.Clip>
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotation" CenterX="40" CenterY="40"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window> 