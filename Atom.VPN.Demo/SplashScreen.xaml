<Window x:Class="Atom.VPN.Demo.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atom.VPN.Demo"
        mc:Ignorable="d"
        Title="Fortis VPN" 
        Height="700" 
        Width="460" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Grid>
        <Border CornerRadius="20" Background="#020101">
            <Grid>
                <!-- World Map Background with Gradient Overlay -->
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Rectangle Fill="#C4C4C4" Opacity="0.2"/>
                    <Image Source="/Resources/world-map.png" Stretch="UniformToFill" Opacity="0.3">
                        <Image.Effect>
                            <BlurEffect Radius="1"/>
                        </Image.Effect>
                    </Image>
                    <Rectangle>
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#00FFFFFF" Offset="0"/>
                                <GradientStop Color="#EEFFFFFF" Offset="0.48"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
                
                <!-- Logo -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,100">
                    <Image x:Name="LogoImage" Source="/Resources/fortis_logo.png" Width="200" Height="200"/>
                </StackPanel>
                
                <!-- Loading Animation -->
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,200,0,0">
                    <Ellipse Width="50" Height="50" Stroke="#A9A9A9" StrokeThickness="5" Opacity="0.4"/>
                    <Ellipse Width="50" Height="50" Stroke="White" StrokeThickness="5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotation" CenterX="25" CenterY="25"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                </Grid>
                
                <!-- Loading Text -->
                <TextBlock Text="Initializing Fortis VPN..." 
                           Foreground="White" 
                           FontSize="16"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,300,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window> 