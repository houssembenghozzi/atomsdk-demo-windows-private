<Window x:Class="Atom.VPN.Demo.AppShortcutsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Atom.VPN.Demo"
        Title="App Shortcuts" 
        Width="Auto" 
        Height="Auto"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Maximized">
    
    <Window.Resources>
        <local:AppIconConverter x:Key="IconConverter"/>
    </Window.Resources>
    
    <!-- Main border with background -->
    <Grid>
        <!-- Background dark overlay that covers the entire screen -->
        <Rectangle Fill="#88000000" 
                 Opacity="0.7"
                 Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                 Height="{Binding ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                 MouseDown="CloseOnBackgroundClick"/>
        
        <!-- Popup content -->
        <Border Background="#FFFFFF" 
                CornerRadius="14" 
                BorderBrush="#EEEEEE" 
                BorderThickness="2" 
                Padding="16,24,16,24"
                Width="408"
                Height="243.21"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <TextBlock Grid.Row="0" 
                           Text="App shortcuts" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#333333" 
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>
                
                <!-- Shortcuts Grid - Centered with smaller icons and less gap -->
                <Grid Grid.Row="1" 
                      Margin="0,0,0,24" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Width="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                                        
                    <!-- Netflix Icon -->
                    <Border Grid.Row="0" Grid.Column="0" 
                            Background="#E50914" 
                            Width="28" Height="28" 
                            CornerRadius="6"
                            Margin="2"
                            Tag="Netflix"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MouseDown="ShortcutIcon_Click">
                        <TextBlock Text="N" 
                                   FontSize="16" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                    </Border>
                    
                    <!-- Prime Icon -->
                    <Border Grid.Row="0" Grid.Column="1" 
                            Background="#00A8E1" 
                            Width="28" Height="28" 
                            CornerRadius="6"
                            Margin="2"
                            Tag="Prime"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MouseDown="ShortcutIcon_Click">
                        <Image Source="/Resources/icon/prime.png" 
                               Width="18" 
                               Height="18"
                               Stretch="Uniform"/>
                    </Border>
                    
                    <!-- Firefox Icon -->
                    <Border Grid.Row="0" Grid.Column="2" 
                            Background="#FF7139" 
                            Width="28" Height="28" 
                            CornerRadius="6"
                            Margin="2"
                            Tag="Firefox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MouseDown="ShortcutIcon_Click">
                        <Image Source="/Atom.VPN.Demo;component/Resources/icon/firefox.svg" 
                               Width="18" 
                               Height="18"
                               Stretch="Uniform"/>
                    </Border>
                    
                    <!-- Chrome Icon -->
                    <Border Grid.Row="0" Grid.Column="3" 
                            Background="#4285F4" 
                            Width="28" Height="28" 
                            CornerRadius="6"
                            Margin="2"
                            Tag="Chrome"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MouseDown="ShortcutIcon_Click">
                        <Image Source="/Atom.VPN.Demo;component/Resources/icon/chrome.svg" 
                               Width="18" 
                               Height="18"
                               Stretch="Uniform"/>
                    </Border>
                    
                    <!-- Chrome Icon (Row 2) -->
                    <Border Grid.Row="1" Grid.Column="0" 
                            Background="#4285F4" 
                            Width="28" Height="28" 
                            CornerRadius="6"
                            Margin="2"
                            Tag="Chrome2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MouseDown="ShortcutIcon_Click">
                        <Image Source="/Atom.VPN.Demo;component/Resources/icon/chrome.svg" 
                               Width="18" 
                               Height="18"
                               Stretch="Uniform"/>
                    </Border>
                    
                    <!-- Firefox Icon (Row 2) -->
                    <Border Grid.Row="1" Grid.Column="1" 
                            Background="#FF7139" 
                            Width="28" Height="28" 
                            CornerRadius="6"
                            Margin="2"
                            Tag="Firefox2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MouseDown="ShortcutIcon_Click">
                        <Image Source="/Atom.VPN.Demo;component/Resources/icon/firefox.svg" 
                               Width="18" 
                               Height="18"
                               Stretch="Uniform"/>
                    </Border>
                    
                    <!-- Netflix Icon (Row 2) -->
                    <Border Grid.Row="1" Grid.Column="2" 
                            Background="#E50914" 
                            Width="28" Height="28" 
                            CornerRadius="6"
                            Margin="2"
                            Tag="Netflix2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MouseDown="ShortcutIcon_Click">
                        <TextBlock Text="N" 
                                   FontSize="16" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                    </Border>
                    
                    <!-- Prime Icon (Row 2) -->
                    <Border Grid.Row="1" Grid.Column="3" 
                            Background="#00A8E1" 
                            Width="28" Height="28" 
                            CornerRadius="6"
                            Margin="2"
                            Tag="Prime2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MouseDown="ShortcutIcon_Click">
                        <Image Source="/Resources/icon/prime.png" 
                               Width="18" 
                               Height="18"
                               Stretch="Uniform"/>
                    </Border>
                </Grid>
                
                <!-- Add New Button -->
                <Border Grid.Row="2" 
                        Background="#F5F5F5" 
                        CornerRadius="10" 
                        Width="376"
                        Height="46"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        MouseDown="AddNewButton_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Ellipse Width="24" 
                                 Height="24" 
                                 Fill="Transparent" 
                                 Stroke="#FF9800" 
                                 StrokeThickness="2"
                                 Grid.Column="0"
                                 Margin="16,0,0,0"/>
                        
                        <Path Data="M12,7L12,17" 
                              Stroke="#FF9800" 
                              StrokeThickness="2" 
                              Grid.Column="0"
                              Margin="16,0,0,0"/>
                        
                        <Path Data="M7,12L17,12" 
                              Stroke="#FF9800" 
                              StrokeThickness="2" 
                              Grid.Column="0"
                              Margin="16,0,0,0"/>
                        
                        <TextBlock Text="Add New" 
                                   Grid.Column="1"
                                   FontSize="16" 
                                   Foreground="#333333" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Padding="0,0,0,0"
                                   FontWeight="Medium"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window> 